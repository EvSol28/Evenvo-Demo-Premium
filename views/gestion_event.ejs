    <script>
        async function fetchUserInfo() {
            try {
                const response = await fetch('/get_user_info');
                if (!response.ok) throw new Error(`Erreur HTTP: ${response.status}`);
                const contentType = response.headers.get("content-type");
                if (!contentType || !contentType.includes("application/json")) { const text = await response.text(); console.warn(`Réponse inattendue /get_user_info: ${text.substring(0,100)}...`); throw new TypeError(`Format invalide.`); }
                const user = await response.json();
                const fullName = `${user.name || ''} ${user.surname || ''}`.trim();
                const userFullNameEl = document.getElementById('userFullName');
                const userEmailEl = document.getElementById('userEmail');
                if (userFullNameEl) userFullNameEl.textContent = fullName || 'Utilisateur';
                if (userEmailEl) userEmailEl.textContent = user.email || 'Email non disponible';
            } catch (error) {
                console.error('Erreur fetchUserInfo:', error);
                const userFullNameEl = document.getElementById('userFullName'); const userEmailEl = document.getElementById('userEmail');
                if (userFullNameEl) userFullNameEl.textContent = 'Erreur'; if (userEmailEl) userEmailEl.textContent = 'Indisponible';
            }
        }

        document.addEventListener('DOMContentLoaded', async () => {
            fetchUserInfo();

            const quorumInput = document.getElementById('event_quorum');
            const editButton = document.getElementById('edit-quorum');
            const saveButton = document.getElementById('save-quorum');
            const eventId = '<%= eventId %>';

            try {
                const quorumResponse = await fetch(`/event/${eventId}/get_quorum`);
                if (quorumResponse.ok) { const { quorum } = await quorumResponse.json(); quorumInput.value = quorum ?? ''; quorumInput.placeholder = "Non défini"; }
                else { console.error('Erreur récup quorum:', quorumResponse.status); quorumInput.placeholder = "Erreur"; }
            } catch (err) { console.error('Erreur réseau quorum:', err); quorumInput.placeholder = "Erreur"; }

            if(editButton && quorumInput && saveButton){
                editButton.addEventListener('click', () => { quorumInput.disabled = false; quorumInput.focus(); saveButton.style.display = 'inline-flex'; });
                saveButton.addEventListener('click', async () => {
                    localStorage.removeItem(`quorumNotified_${eventId}`); const quorumValue = quorumInput.value.trim(); let quorumToSend = null;
                    if (quorumValue !== '') { const quorumNum = Number(quorumValue); if (isNaN(quorumNum) || quorumNum <= 0) { Swal.fire({ icon: 'error', title: 'Erreur', text: 'Quorum invalide (nombre > 0) ou vide pour supprimer.' }); return; } quorumToSend = quorumNum; }
                    quorumInput.disabled = true; saveButton.style.display = 'none';
                    try {
                        const response = await fetch(`/event/${eventId}/update_quorum`, { method: 'POST', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify({ quorum: quorumToSend }) });
                        if (response.ok) { Swal.fire({ icon: 'success', title: 'Succès', text: quorumToSend === null ? 'Quorum supprimé.' : 'Quorum mis à jour.' }); quorumInput.placeholder = "Non défini"; }
                        else { const error = await response.json(); Swal.fire({ icon: 'error', title: 'Erreur', text: error.message || 'Erreur maj quorum.' }); quorumInput.disabled = false; saveButton.style.display = 'inline-flex'; }
                    } catch (err) { console.error('Erreur maj quorum fetch:', err); Swal.fire({ icon: 'error', title: 'Erreur', text: 'Erreur réseau maj quorum.' }); quorumInput.disabled = false; saveButton.style.display = 'inline-flex'; }
                });
            }

            const logoForm = document.getElementById('logoForm');
            const logoInput = document.getElementById('logo');
            const logoLabelText = document.getElementById('logo-label-text');
            const defaultLogoLabelText = 'Choisir un fichier...';

            if (logoInput && logoLabelText) {
                logoInput.addEventListener('change', function(e) {
                    if (e.target.files && e.target.files.length > 0) {
                        const fileName = e.target.files[0].name;
                        logoLabelText.textContent = fileName;
                        logoLabelText.classList.remove('file-upload-placeholder');
                    } else {
                        logoLabelText.textContent = defaultLogoLabelText;
                        logoLabelText.classList.add('file-upload-placeholder');
                    }
                });
                logoLabelText.classList.add('file-upload-placeholder');
            }

            if(logoForm) {
                logoForm.addEventListener('submit', async (event) => {
                    event.preventDefault();
                    const formData = new FormData(logoForm);
                    if (!logoInput || !logoInput.files || logoInput.files.length === 0) {
                        Swal.fire({ icon: 'warning', title: 'Aucun fichier', text: 'Veuillez sélectionner un fichier logo.' });
                        return;
                    }
                    try {
                        const response = await fetch(`/event/<%= eventId %>/upload_logo`, { method: 'POST', body: formData });
                        const result = await response.json();
                        if (response.ok && result.success) {
                            Swal.fire({ icon: 'success', title: 'Succès', text: result.message });
                            logoForm.reset();
                            if(logoLabelText) {
                                logoLabelText.textContent = defaultLogoLabelText;
                                logoLabelText.classList.add('file-upload-placeholder');
                            }
                        } else {
                            Swal.fire({ icon: 'error', title: 'Erreur', text: result.message || 'Erreur upload logo.' });
                        }
                    } catch (error) {
                        console.error('Erreur upload logo fetch:', error);
                        Swal.fire({ icon: 'error', title: 'Erreur', text: 'Erreur réseau upload logo.' });
                    }
                });
            }

             const exportPdfBtn = document.getElementById("exportPdfBtn");
             if(exportPdfBtn) {
                 exportPdfBtn.addEventListener("click", function() {
                    const exportUrl = `/event/${eventId}/export-pdf`;
                    fetch(exportUrl)
                        .then(response => { if (!response.ok) { return response.json().then(err => { throw new Error(err.message || `Erreur ${response.status}`) }); } return response.blob(); })
                        .then(blob => { const link = document.createElement('a'); link.href = URL.createObjectURL(blob); link.download = `Rapport_Presence_Evenement_${eventId}.pdf`; document.body.appendChild(link); link.click(); document.body.removeChild(link); URL.revokeObjectURL(link.href); })
                        .catch(err => { console.error("Erreur export PDF:", err.message); Swal.fire({ icon: 'warning', title: 'Export impossible', text: err.message.includes('Aucun utilisateur') ? 'Aucun utilisateur rattaché.' : 'Erreur: ' + err.message }); });
                });
             }

            const exportPdfQRBtn = document.getElementById('exportPdfQRBtn');
            if (exportPdfQRBtn) {
                exportPdfQRBtn.addEventListener('click', async () => {
                    try {
                        const response = await fetch(`/generate-qrcodes/${eventId}`);
                        if (response.ok) { const blob = await response.blob(); const url = window.URL.createObjectURL(blob); const a = document.createElement('a'); a.style.display = 'none'; a.href = url; a.download = `Badges_QR_Evenement_${eventId}.pdf`; document.body.appendChild(a); a.click(); window.URL.revokeObjectURL(url); document.body.removeChild(a); }
                        else { const errorData = await response.json().catch(() => ({ message: 'Erreur inconnue' })); if (response.status === 400 && errorData.message.includes("Aucun utilisateur")) { Swal.fire({ icon: 'warning', title: 'Aucun utilisateur', text: 'Aucun utilisateur rattaché.' }); } else { Swal.fire({ icon: 'error', title: 'Erreur', text: 'Erreur export QR: ' + (errorData.message || 'Inconnue') }); } }
                    } catch (error) { console.error('Erreur fetch QR PDF:', error); Swal.fire({ icon: 'error', title: 'Erreur', text: 'Erreur réseau export QR.' }); }
                });
            }
        });
    </script>
</body>
</html>