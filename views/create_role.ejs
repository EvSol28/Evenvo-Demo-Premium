            <div class="navbar-right d-none d-lg-block"><a class="navbar-brand1" href="/dashboard"><img src="/assets/logo.png" alt="Logo droite"></a></div>
        </div>
    </nav>

    <!-- Contenu Principal -->
    <div class="main-content">
        <div class="page-header">
            <h1>Gestion des Rôles</h1>
        </div>

        <!-- Bouton Créer -->
        <div class="create-btn-container">
            <button id="createRoleBtn" class="btn btn-custom-action"><i class="fas fa-plus"></i> Créer un rôle</button>
        </div>

        <!-- Formulaire de création -->
        <div class="content-block" id="roleFormContainer">
            <h2>Nouveau rôle</h2>
            <form action="/create_role" method="POST" id="roleForm">
                <div class="mb-3">
                    <label for="roleName" class="form-label">Nom du rôle</label>
                    <input type="text" class="form-control" id="roleName" name="roleName" required>
                </div>
                <div class="mb-3">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="MobileAccessGlobal" name="MobileAccessGlobal">
                        <label class="form-check-label" for="MobileAccessGlobal">Accès Application Mobile</label>
                    </div>
                </div>
                <div class="button-container">
                    <button type="submit" class="btn btn-custom-action"><i class="fas fa-check"></i> Valider</button>
                    <button type="button" id="cancelBtn" class="btn btn-custom-secondary"><i class="fas fa-times"></i> Annuler</button>
                </div>
            </form>
        </div>

        <!-- Tableau des rôles -->
        <div class="content-block">
            <h2>Liste des rôles</h2>
            <div class="table-responsive-scrollable">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nom</th>
                            <th>Accès Application Mobile</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (roles && roles.length > 0) { %>
                            <% roles.forEach(role => { %>
                                <tr class="role-row" data-id="<%= role.incrementedId %>">
                                    <td><%= role.incrementedId %></td>
                                    <td><%= role.name %></td>
                                    <td>
                                        <div class="form-check form-switch">
                                            <input type="checkbox" class="form-check-input mobile-access-switch" id="MobileAccessGlobal_<%= role.incrementedId %>" <%= role.MobileAccessGlobal ? 'checked' : '' %> data-role-id="<%= role.incrementedId %>">
                                            <label class="form-check-label visually-hidden" for="MobileAccessGlobal_<%= role.incrementedId %>"></label>
                                        </div>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="3" class="text-center text-muted py-4">Aucun rôle créé pour le moment.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
            <!-- Compteur dans un carreau -->
            <div class="counts-container">
                <span id="totalRolesCountTile" class="form-control">
                    Nombre total de rôles : <span id="totalRolesCountDynamic"><%- roles ? roles.length : 0 %></span>
                </span>
            </div>
        </div>
    </div>

    <!-- Modal pour afficher les détails d'un rôle -->
    <div class="modal fade" id="RoleDetailModal" tabindex="-1" aria-labelledby="RoleDetailModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="RoleDetailModalLabel">Détails du Rôle</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p><strong>ID :</strong> <span id="modalId"></span></p>
                    <p><strong>Nom :</strong> <span id="modalName"></span></p>
                    <p><strong>Accès Mobile :</strong> <span id="modalMobileAccessGlobal"></span></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-custom-action" id="editRoleBtn" style="display: none;"><i class="fas fa-edit"></i> Modifier</button>
                    <button type="button" class="btn btn-custom-danger" id="suppRoleBtn" style="display: none;"><i class="fas fa-trash-alt"></i> Supprimer</button>
                    <button type="button" class="btn btn-custom-secondary" data-bs-dismiss="modal"><i class="fas fa-times"></i> Fermer</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal pour modifier un rôle -->
    <div class="modal fade" id="editRoleModal" tabindex="-1" aria-labelledby="editRoleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editRoleModalLabel">Modifier le Rôle</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="editRoleForm">
                        <div class="mb-3">
                            <label for="editRoleName" class="form-label">Nom du rôle</label>
                            <input type="text" class="form-control" id="editRoleName" name="roleName" required>
                        </div>
                        <div class="mb-3">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="editMobileAccessGlobal" name="MobileAccessGlobal">
                                <label class="form-check-label" for="editMobileAccessGlobal">Accès Application Mobile</label>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-custom-secondary" data-bs-dismiss="modal"><i class="fas fa-times"></i> Annuler</button>
                    <button type="button" class="btn btn-custom-action" id="saveEditBtn"><i class="fas fa-save"></i> Enregistrer</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        async function fetchUserInfo() {
            try {
                const response = await fetch('/get_user_info');
                if (!response.ok) throw new Error(`Erreur HTTP: ${response.status}`);
                const user = await response.json();
                const fullName = `${user.name || ''} ${user.surname || ''}`.trim();
                document.getElementById('userFullName').textContent = fullName || 'Utilisateur';
                document.getElementById('userEmail').textContent = user.email || 'Email non disponible';
            } catch (error) {
                console.error('Erreur chargement info utilisateur:', error);
                document.getElementById('userFullName').textContent = 'Erreur';
                document.getElementById('userEmail').textContent = 'Chargement impossible';
            }
        }

        function formatRoleName(name) {
            if (!name) return '';
            return name.charAt(0).toUpperCase() + name.slice(1).toLowerCase();
        }

        document.addEventListener('DOMContentLoaded', () => {
            fetchUserInfo();

            const roleFormContainer = document.getElementById('roleFormContainer');
            const createRoleBtn = document.getElementById('createRoleBtn');
            const cancelBtn = document.getElementById('cancelBtn');
            const table = document.querySelector('table tbody');
            const totalRolesCountDynamic = document.getElementById('totalRolesCountDynamic');
            const detailModal = new bootstrap.Modal(document.getElementById('RoleDetailModal'));
            const editModal = new bootstrap.Modal(document.getElementById('editRoleModal'));

            createRoleBtn.addEventListener('click', () => {
                roleFormContainer.style.display = 'block';
                window.scrollTo({ top: roleFormContainer.offsetTop - 100, behavior: 'smooth' });
            });

            cancelBtn.addEventListener('click', () => {
                roleFormContainer.style.display = 'none';
                document.getElementById('roleForm').reset();
            });

            document.getElementById('roleForm').addEventListener('submit', async (e) => {
                e.preventDefault();
                const roleName = document.getElementById('roleName').value.trim();
                const MobileAccessGlobal = document.getElementById('MobileAccessGlobal').checked;

                if (!roleName) {
                    Swal.fire({ icon: 'error', title: 'Erreur', text: 'Veuillez entrer un nom de rôle.' });
                    return;
                }

                try {
                    const response = await fetch('/create_role', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ roleName, MobileAccessGlobal })
                    });
                    const result = await response.json();

                    if (!response.ok) {
                        if (result.error === 'Un rôle avec ce nom existe déjà') {
                            Swal.fire({
                                icon: 'error',
                                title: 'Erreur',
                                text: 'Un rôle avec ce nom existe déjà.'
                            });
                        } else {
                            throw new Error(result.error || 'Erreur serveur');
                        }
                        return;
                    }

                    Swal.fire({
                        icon: 'success',
                        title: 'Succès',
                        text: 'Rôle créé avec succès.'
                    }).then(() => {
                        window.location.reload();
                    });
                } catch (error) {
                    Swal.fire({ icon: 'error', title: 'Erreur', text: `Erreur: ${error.message}` });
                }
            });

            function updateTotalRolesCount() {
                const rows = table.querySelectorAll('tr.role-row');
                totalRolesCountDynamic.textContent = rows.length;
            }
            updateTotalRolesCount();

            table.addEventListener('click', (e) => {
                const row = e.target.closest('tr');
                const isMobileAccessClick = e.target.closest('.mobile-access-switch') !== null;

                if (!row || isMobileAccessClick) return;

                const roleId = row.getAttribute('data-id');
                if (!roleId) return;

                document.getElementById('modalId').textContent = row.cells[0].textContent;
                document.getElementById('modalName').textContent = row.cells[1].textContent;
                document.getElementById('modalMobileAccessGlobal').textContent = row.querySelector('.mobile-access-switch').checked ? 'Oui' : 'Non';

                document.getElementById('RoleDetailModal').setAttribute('data-role-id', roleId);
                document.getElementById('editRoleBtn').style.display = (roleId === '1' || roleId === '2') ? 'none' : 'inline-flex';
                document.getElementById('suppRoleBtn').style.display = (roleId === '1' || roleId === '2') ? 'none' : 'inline-flex';
                detailModal.show();
            });

            document.querySelectorAll('.mobile-access-switch').forEach(switchElement => {
                switchElement.addEventListener('change', async (e) => {
                    const roleId = e.target.getAttribute('data-role-id');
                    const MobileAccessGlobal = e.target.checked;

                    try {
                        const response = await fetch('/update_role_mobile_access', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({ roleId, MobileAccessGlobal })
                        });
                        if (!response.ok) throw new Error('Erreur lors de la mise à jour');
                    } catch (error) {
                        console.error('Erreur:', error.message);
                        e.target.checked = !MobileAccessGlobal;
                    }
                });
            });

            document.getElementById('suppRoleBtn').addEventListener('click', async () => {
                const roleId = document.getElementById('RoleDetailModal').getAttribute('data-role-id');

                if (roleId === '1' || roleId === '2') {
                    Swal.fire({ icon: 'error', title: 'Erreur', text: 'Ce rôle est protégé et ne peut pas être supprimé.' });
                    return;
                }

                Swal.fire({
                    title: 'Confirmer la suppression',
                    text: 'Voulez-vous vraiment supprimer ce rôle ?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Oui',
                    cancelButtonText: 'Non'
                }).then(async (result) => {
                    if (result.isConfirmed) {
                        try {
                            const response = await fetch('/delete_role', {
                                method: 'POST',
                                headers: { 'Content-Type': 'application/json' },
                                body: JSON.stringify({ roleId })
                            });
                            if (!response.ok) throw new Error('Erreur lors de la suppression');
                            const row = table.querySelector(`tr[data-id="${roleId}"]`);
                            if (row) row.remove();
                            if (table.children.length === 0) {
                                table.innerHTML = '<tr><td colspan="3" class="text-center text-muted py-4">Aucun rôle créé pour le moment.</td></tr>';
                            }
                            updateTotalRolesCount();
                            Swal.fire({ icon: 'success', title: 'Succès', text: 'Rôle supprimé avec succès.' });
                            detailModal.hide();
                        } catch (error) {
                            Swal.fire({ icon: 'error', title: 'Erreur', text: error.message });
                        }
                    }
                });
            });

            document.getElementById('editRoleBtn').addEventListener('click', () => {
                const roleId = document.getElementById('RoleDetailModal').getAttribute('data-role-id');
                const row = table.querySelector(`tr[data-id="${roleId}"]`);
                document.getElementById('editRoleName').value = row.cells[1].textContent;
                document.getElementById('editMobileAccessGlobal').checked = row.querySelector('.mobile-access-switch').checked;
                document.getElementById('editRoleForm').setAttribute('data-role-id', roleId);
                detailModal.hide();
                editModal.show();
            });

            document.getElementById('saveEditBtn').addEventListener('click', async () => {
                const roleId = document.getElementById('editRoleForm').getAttribute('data-role-id');
                let updatedName = document.getElementById('editRoleName').value.trim();
                const MobileAccessGlobal = document.getElementById('editMobileAccessGlobal').checked;

                if (!updatedName) {
                    Swal.fire({ icon: 'error', title: 'Erreur', text: 'Le nom du rôle ne peut pas être vide.' });
                    return;
                }

                updatedName = formatRoleName(updatedName);

                try {
                    const response = await fetch(`/update_role/${roleId}`, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ roleName: updatedName, MobileAccessGlobal })
                    });
                    if (!response.ok) throw new Error('Erreur lors de la mise à jour');
                    const row = table.querySelector(`tr[data-id="${roleId}"]`);
                    row.cells[1].textContent = updatedName;
                    row.querySelector('.mobile-access-switch').checked = MobileAccessGlobal;
                    Swal.fire({ icon: 'success', title: 'Succès', text: 'Rôle mis à jour avec succès.' });
                    editModal.hide();
                } catch (error) {
                    Swal.fire({ icon: 'error', title: 'Erreur', text: error.message });
                }
            });
        });
    </script>
