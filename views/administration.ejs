        .page-header { margin-bottom: 2.5rem; /* Comme dashboard */ text-align: center; }
        .page-header h1 { font-size: 1.8rem; font-weight: 700; color: var(--dark); }

        /* --- Cartes (Style Dashboard) --- */
        .dashboard-card {
            background: var(--card-bg); border: 1px solid var(--card-border); border-radius: 16px;
            padding: 1.75rem; height: 100%;
            display: flex; flex-direction: column;
            box-shadow: var(--card-shadow); transition: all 0.35s cubic-bezier(0.25, 0.8, 0.25, 1);
            position: relative; overflow: hidden;
             min-height: 260px; /* Hauteur minimale pour alignement */
        }
        .dashboard-card:hover { transform: translateY(-6px); box-shadow: var(--card-hover-shadow); border-color: var(--card-hover-border); }
        .card-icon-container { width: 48px; height: 48px; border-radius: 12px; display: flex; align-items: center; justify-content: center; margin-bottom: 1rem; position: relative; overflow: hidden; box-shadow: 0 4px 8px rgba(0,0,0,0.1); flex-shrink: 0; }
        .card-icon { font-size: 1.2rem; color: white; position: relative; z-index: 1; animation: iconPulse 2s infinite ease-in-out; }
        @keyframes iconPulse { 0%, 100% { transform: scale(1); } 50% { transform: scale(1.15); } }
        .card-icon-container::before { content: ''; position: absolute; width: 150%; height: 100%; background: linear-gradient(to right, transparent 0%, rgba(255, 255, 255, 0.3) 50%, transparent 100%); border-radius: 12px; animation: shine 3.5s infinite linear; top: 0; left: -100%; transform: skewX(-25deg); z-index: 0; }
        @keyframes shine { 0% { left: -125%; } 50% { left: 75%; } 100% { left: 75%; } }
        /* Couleurs spécifiques pour cette page */
        .card-icon-container.superadmin { background: linear-gradient(135deg, var(--color-superadmin) 0%, var(--color-superadmin-light) 100%); }
        .card-icon-container.roles { background: linear-gradient(135deg, var(--color-roles) 0%, var(--color-roles-light) 100%); }
        .card-icon-container.import { background: linear-gradient(135deg, var(--color-import) 0%, var(--color-import-light) 100%); }
        .card-icon-container.export { background: linear-gradient(135deg, var(--color-export) 0%, var(--color-export-light) 100%); }

        .dashboard-card .card-title { color: var(--dark); font-weight: 600; font-size: 1.15rem; margin-bottom: 0.75rem; }
        .dashboard-card .card-text { color: var(--gray); font-size: 0.9rem; margin-bottom: 1.5rem; flex-grow: 1; line-height: 1.6; } /* flex-grow pousse le bouton en bas */
        .status-indicator { display: flex; align-items: center; margin-bottom: 1.5rem; font-size: 0.85rem; font-weight: 500; color: var(--gray); }
        .status-dot { width: 9px; height: 9px; border-radius: 50%; margin-right: 8px; flex-shrink: 0; }
