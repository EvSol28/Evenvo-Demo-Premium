<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg">
        <a class="navbar-brand" href="/dashboard"><img src="/assets/evenvo.png" alt="Logo evenvo gauche"></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav mx-auto">
                 <li class="nav-item"><a class="nav-link" href="/dashboard"><i class="fas fa-home"></i></a></li>
                 <li class="nav-item"><a class="nav-link" href="/event/<%= eventId %>"><i class="far fa-calendar-alt"></i> Événement</a></li>
                 <li class="nav-item"><a class="nav-link" href="/event/<%= eventId %>/suivi_utilisateur"><i class="fas fa-users"></i> Participants</a></li>
                 <li class="nav-item"><a class="nav-link active" href="/event/<%= eventId %>/suivi_presence"><i class="fas fa-clipboard-check"></i> Présences</a></li>
                 <li class="nav-item"><a class="nav-link" href="/event/<%= eventId %>/suivi_vote"><i class="fas fa-vote-yea"></i> Vote</a></li>
                 <li class="nav-item"><a class="nav-link" href="/event/<%= eventId %>/gestion_event"><i class="fas fa-cog"></i> Gestion</a></li>
                 <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user"></i></a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                        <li><span class="dropdown-item-text"><strong id="userFullName">Chargement...</strong><br><small id="userEmail">...</small></span></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="/logout"><i class="fas fa-sign-out-alt fa-fw me-2"></i>Déconnexion</a></li>
                    </ul>
                </li>
            </ul>
        </div>
        <div class="navbar-right d-none d-lg-block"><a class="navbar-brand1" href="/dashboard"><img src="/assets/logo.png" alt="Logo droite"></a></div>
    </nav>

    <!-- Contenu Principal -->
    <div class="main-content">
        <div class="page-header">
            <h1>Suivi des Présences</h1>
            <% if (typeof eventName !== 'undefined' && eventName) { %>
             <p class="subtitle-gray">Événement : <%= eventName %></p>
            <% } %>
        </div>

        <!-- Bloc Table des utilisateurs -->
        <div class="content-block">
             <h2>Liste des Participants et Statut</h2>
             <% let initialValidUserCount = 0; %>
             <% if (typeof users !== 'undefined' && Array.isArray(users)) { %>
                 <% users.forEach(user => { %>
                     <% if (user && user.id && user.name && user.surname) { %>
                         <% initialValidUserCount++; %>
                     <% } %>
                 <% }); %>
             <% } %>
            <div class="controls-container">
                <div class="search-container">
                    <input type="text" id="searchInput" class="form-control" placeholder="Rechercher par nom ou prénom...">
                </div>
            </div>
            <div class="table-responsive-scrollable">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th data-column="id" data-sort="none">ID <span class="arrow"></span></th>
                            <th data-column="name" data-sort="none">Nom <span class="arrow"></span></th>
                            <th data-column="surname" data-sort="none">Prénom <span class="arrow"></span></th>
                            <th data-column="civility" data-sort="none">Civilité <span class="arrow"></span></th>
                            <th data-column="birthdate" data-sort="none">Date de naissance <span class="arrow"></span></th>
                            <th data-column="email" data-sort="none">Email <span class="arrow"></span></th>
                            <th data-column="role" data-sort="none">Rôle <span class="arrow"></span></th>
                            <th data-column="presence" data-sort="none">Présence <span class="arrow"></span></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (typeof users !== 'undefined' && Array.isArray(users) && users.length > 0) { %>
                            <% let hasDisplayedUsers = false; %>
                            <% users.forEach(user => { %>
                                <% if (user && user.id && user.name && user.surname) { %>
                                    <% hasDisplayedUsers = true; %>
                                    <tr data-user-id="<%= user.id %>">
                                        <td><%= user.id %></td>
                                        <td><%= user.name %></td>
                                        <td><%= user.surname %></td>
                                        <td><%= user.civility || '-' %></td>
                                        <td><%= user.birthdate || '-' %></td>
                                        <td><%= user.email || '-' %></td>
                                        <td><%= user.role || '-' %></td>
                                        <td>
                                            <% if (user.presence === true) { %>
                                                <span class="badge badge-success">Présent</span>
                                            <% } else { %>
                                                <span class="badge badge-danger">Absent</span>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% } %>
                            <% }); %>
                            <% if (!hasDisplayedUsers) { %>
                                <tr>
                                    <td colspan="8" class="text-center text-muted py-4">Aucun participant valide trouvé pour cet événement.</td>
                                </tr>
                            <% } %>
                        <% } else { %>
                            <tr>
                                <td colspan="8" class="text-center text-muted py-4">Aucun participant associé à cet événement.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
            <div class="users-count-container">
                <span id="presenceUsersCount" class="form-control">Participants affichés : <%= initialValidUserCount %></span>
            </div>
        </div>

        <!-- Bloc Diagrammes -->
        <div class="content-block chart-block">
             <h2>Statistiques de présence globales</h2>
             <div class="chart-canvas-container">
                <canvas id="totalChart" class="chart-size"></canvas>
             </div>
             <p id="totalStats" class="chart-stats">Chargement des statistiques...</p>
        </div>

        <% if (typeof chartData !== 'undefined' && Array.isArray(chartData) && chartData.length > 0) { %>
            <div class="content-block chart-block">
                <h2>Statistiques par Profil</h2>
                <div class="row justify-content-center">
                    <% chartData.forEach(data => { %>
                        <% if (data && data.role) { %>
                            <% const roleIdSuffix = String(data.role).toLowerCase().replace(/\s+/g, '-'); %>
                            <div class="col-lg-4 col-md-6 mb-4">
                               <h3><%= data.role %></h3>
                               <div class="chart-canvas-container">
                                 <canvas id="<%= roleIdSuffix %>Chart" class="chart-size"></canvas>
                               </div>
                               <p id="<%= roleIdSuffix %>Stats" class="chart-stats">Chargement...</p>
                            </div>
                        <% } %>
                    <% }); %>
                </div>
            </div>
        <% } %>

    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        (function() {
            async function fetchUserInfo() {
                try {
                    const response = await fetch('/get_user_info');
                    if (!response.ok) throw new Error(`Erreur HTTP: ${response.status}`);
                    const contentType = response.headers.get("content-type");
                    if (!contentType || !contentType.includes("application/json")) {
                        const text = await response.text();
                        console.warn(`Réponse inattendue: ${text.substring(0,100)}...`);
                        throw new TypeError(`Format invalide.`);
                    }
                    const user = await response.json();
                    const fullName = `${user.name || ''} ${user.surname || ''}`.trim();
                    document.getElementById('userFullName').textContent = fullName || 'Utilisateur';
                    document.getElementById('userEmail').textContent = user.email || 'Email non disponible';
                } catch (error) {
                    console.error('Erreur fetchUserInfo:', error);
                    document.getElementById('userFullName').textContent = 'Erreur';
                    document.getElementById('userEmail').textContent = 'Indisponible';
                }
            }

            document.addEventListener('DOMContentLoaded', function () {
                fetchUserInfo();

                const eventId = "<%= eventId %>";
                let chartRawData = [];
                let totalByRoleRaw = [];

                try {
                    <% if (typeof chartData !== 'undefined' && chartData !== null) { %>
                        chartRawData = <%- JSON.stringify(chartData) %>;
                    <% } else { %>
                        console.warn("chartData non défini.");
                    <% } %>

                    <% if (typeof totalByRole !== 'undefined' && totalByRole !== null) { %>
                        totalByRoleRaw = <%- JSON.stringify(totalByRole) %>;
                    <% } else { %>
                        console.warn("totalByRole non défini.");
                    <% } %>
                } catch (e) {
                     console.error("Erreur parsing EJS:", e);
                     chartRawData = [];
                     totalByRoleRaw = [];
                }

                const searchInput = document.getElementById("searchInput");
                const tableBody = document.querySelector("table tbody");
                const tableElement = document.querySelector('.table');
                const presenceUsersCountSpan = document.getElementById("presenceUsersCount");
                const tableHeaders = document.querySelectorAll('th[data-column]');

                function updatePresenceUsersCount() {
                    if (!presenceUsersCountSpan) return;
                    const visibleRows = tableBody.querySelectorAll("tr:not([style*='display: none']):not(.no-results)");
                    let count = 0;
                    visibleRows.forEach(row => {
                        if (!row.querySelector("td[colspan='8']")) count++;
                    });
                    presenceUsersCountSpan.textContent = `Participants affichés : ${count}`;
                }

                function getColumnIndex(column) {
                    const headers = Array.from(tableHeaders);
                    return headers.findIndex(th => th.getAttribute('data-column') === column);
                }

                function parseDate(dateString, order = 'asc') {
                    if (dateString === '-' || !dateString) {
                        return order === 'asc' ? new Date(8640000000000000) : new Date(-8640000000000000);
                    }
                    try {
                        if (dateString.includes('/')) {
                            const parts = dateString.split('/');
                            return new Date(Date.UTC(parts[2], parts[1] - 1, parts[0]));
                        } else if (dateString.includes('-')) {
                            const parsed = new Date(dateString);
                            if (!isNaN(parsed.getTime())) return parsed;
                        }
                    } catch (e) {}
                    return order === 'asc' ? new Date(8640000000000000) : new Date(-8640000000000000);
                }

                if (searchInput && tableBody) {
                    searchInput.addEventListener("input", function () {
                        const searchQuery = this.value.toLowerCase().trim();
                        const rows = tableBody.querySelectorAll("tr:not(.no-results)");
                        let hasVisibleRows = false;

                        rows.forEach(row => {
                            if (row.querySelector("td[colspan='8']")) { row.style.display = 'none'; return; }
                            const nameCell = row.querySelector("td:nth-child(2)");
                            const surnameCell = row.querySelector("td:nth-child(3)");
                            const name = nameCell ? nameCell.textContent.toLowerCase() : '';
                            const surname = surnameCell ? surnameCell.textContent.toLowerCase() : '';

                            if (name.includes(searchQuery) || surname.includes(searchQuery)) {
                                row.style.display = ""; hasVisibleRows = true;
                            } else {
                                row.style.display = "none";
                            }
                        });

                        let noResultRow = tableBody.querySelector("tr.no-results");
                        if (!hasVisibleRows && searchQuery !== '') {
                            if (!noResultRow) {
                                noResultRow = document.createElement('tr'); noResultRow.classList.add('no-results');
                                noResultRow.innerHTML = `<td colspan="8" class="text-center text-muted py-3"></td>`;
                                tableBody.appendChild(noResultRow);
                            }
                            noResultRow.style.display = '';
                            noResultRow.querySelector('td').textContent = `Aucun résultat pour "${this.value}"`;
                        } else if (noResultRow) {
                            noResultRow.style.display = 'none';
                        }
                        updatePresenceUsersCount();
                    });
                }

                function sortTable(column, order) {
                    if (!tableBody) return;
                    const rows = Array.from(tableBody.querySelectorAll('tr:not(:has(td[colspan="8"])):not(.no-results)'));
                    const columnIndex = getColumnIndex(column);
                    if (columnIndex === -1) return;

                    rows.sort((rowA, rowB) => {
                        const cellAElement = rowA.querySelector(`td:nth-child(${columnIndex + 1})`);
                        const cellBElement = rowB.querySelector(`td:nth-child(${columnIndex + 1})`);
                        let cellA = cellAElement ? cellAElement.textContent.trim() : '';
                        let cellB = cellBElement ? cellBElement.textContent.trim() : '';

                        if (column === 'presence') {
                            cellA = (cellA === 'Présent' ? 1 : 0); cellB = (cellB === 'Présent' ? 1 : 0);
                        } else if (column === 'id' || (cellA !== '-' && cellB !== '-' && !isNaN(parseFloat(cellA)) && isFinite(cellA) && !isNaN(parseFloat(cellB)) && isFinite(cellB))) {
                            cellA = cellA === '-' ? (order === 'asc' ? Infinity : -Infinity) : parseFloat(cellA);
                            cellB = cellB === '-' ? (order === 'asc' ? Infinity : -Infinity) : parseFloat(cellB);
                        } else if (column === 'birthdate') {
                            cellA = parseDate(cellA, order); cellB = parseDate(cellB, order);
                            let comparison = 0;
                            if (cellA > cellB) comparison = 1;
                            else if (cellA < cellB) comparison = -1;
                            return order === 'asc' ? comparison : (comparison * -1);
                        } else {
                            cellA = cellA.toLowerCase(); cellB = cellB.toLowerCase();
                        }

                        let comparison = 0;
                        if (cellA > cellB) comparison = 1;
                        else if (cellA < cellB) comparison = -1;
                        return order === 'asc' ? comparison : (comparison * -1);
                    });
                    rows.forEach(row => tableBody.appendChild(row));
                }

                if (tableElement) {
                    tableHeaders.forEach(th => {
                        th.addEventListener('click', function () {
                            const column = th.getAttribute('data-column');
                            if (!column) return;
                            let currentOrder = th.getAttribute('data-sort');
                            let newOrder = (currentOrder === 'asc') ? 'desc' : 'asc';

                            tableHeaders.forEach(header => {
                                if (header !== th) {
                                    header.setAttribute('data-sort', 'none');
                                    header.querySelector('.arrow')?.setAttribute('class', 'arrow');
                                }
                            });
                            th.setAttribute('data-sort', newOrder);
                            th.querySelector('.arrow')?.setAttribute('class', `arrow ${newOrder}`);
                            sortTable(column, newOrder);
                            updatePresenceUsersCount();
                        });
                    });
                }

                let charts = {};
                function destroyChart(canvasId) {
                    if (charts[canvasId]) { charts[canvasId].destroy(); delete charts[canvasId]; }
                }
                const commonPieConfig = (chartDataValues, chartLabels) => ({
                    type: 'doughnut',
                    data: { 
                        labels: chartLabels, 
                        datasets: [{ 
                            data: chartDataValues, 
                            backgroundColor: [
                                'rgba(75, 192, 192, 0.08)',  // Présents (transparent)
                                'rgba(247, 70, 74, 0.08)'     // Absents (transparent)
                            ],
                            borderColor: [
                                'rgba(75, 192, 192, 0.5)',   // Bordure Présents (réduite en opacité)
                                'rgba(247, 70, 74, 0.5)'     // Bordure Absents (réduite en opacité)
                            ],
                            borderWidth: 1.5, // Bordure plus fine (réduite de 3 à 1.5)
                            hoverBackgroundColor: [
                                'rgba(75, 192, 192, 1)',
                                'rgba(247, 70, 74, 1)'
                            ],
                            hoverBorderColor: [
                                'rgba(75, 192, 192, 1)',
                                'rgba(247, 70, 74, 1)'
                            ],
                            borderRadius: 5,
                        }] 
                    },
                    options: { 
                        responsive: true, 
                        maintainAspectRatio: false,
                        cutout: '70%',
                        plugins: { 
                            legend: { 
                                display: true, 
                                position: 'bottom', 
                                labels: { 
                                    padding: 15, 
                                    font: { size: 12 }, 
                                    color: 'var(--gray)',
                                    boxWidth: 20,
                                    usePointStyle: true
                                } 
                            }, 
                            tooltip: { 
                                enabled: true, 
                                callbacks: { 
                                    label: function(context) { 
                                        let l = context.label || ''; 
                                        if (l) l += ': '; 
                                        if (context.parsed !== null) { 
                                            const t = context.dataset.data.reduce((a, b) => a + b, 0); 
                                            const p = t > 0 ? Math.round((context.parsed / t) * 100) : 0; 
                                            l += `${context.parsed} (${p}%)`; 
                                        } 
                                        return l; 
                                    } 
                                } 
                            } 
                        },
                        animation: {
                            animateRotate: true,
                            animateScale: true
                        }
                    }
                });

                function renderCharts() {
                    const totalChartElement = document.getElementById('totalChart');
                    const totalStatsElement = document.getElementById('totalStats');
                    if (totalChartElement && totalStatsElement) {
                        destroyChart('totalChart');
                        if (Array.isArray(totalByRoleRaw) && totalByRoleRaw.length > 0) {
                            const totalPresents = totalByRoleRaw.reduce((s, d) => s + (d.present || 0), 0);
                            const totalAbsents = totalByRoleRaw.reduce((s, d) => s + (d.absent || 0), 0);
                            const totalParticipants = totalPresents + totalAbsents;
                            if (totalParticipants > 0) {
                                totalChartElement.style.display = 'block';
                                charts['totalChart'] = new Chart(totalChartElement, commonPieConfig([totalPresents, totalAbsents], ['Présents', 'Absents']));
                                const perc = Math.round((totalPresents / totalParticipants) * 100);
                                totalStatsElement.innerHTML = `
                                    <span class="badge badge-success">Présents: ${totalPresents} (${perc}%)</span>
                                    <span class="badge badge-danger">Absents: ${totalAbsents}</span>
                                    <span class="badge badge-total">Total: ${totalParticipants}</span>
                                `;
                            } else { 
                                totalStatsElement.textContent = "Aucune donnée."; 
                                totalChartElement.style.display = 'none'; 
                            }
                        } else { 
                            totalStatsElement.textContent = "Données indisponibles."; 
                            totalChartElement.style.display = 'none'; 
                        }
                    }

                    if (Array.isArray(chartRawData) && chartRawData.length > 0) {
                        chartRawData.forEach(data => {
                            if (data && data.role) {
                                const roleIdSuffix = String(data.role).toLowerCase().replace(/\s+/g, '-');
                                const chartId = `${roleIdSuffix}Chart`;
                                const statsId = `${roleIdSuffix}Stats`;
                                const chartElement = document.getElementById(chartId);
                                const statsElement = document.getElementById(statsId);
                                if (chartElement && statsElement) {
                                    destroyChart(chartId);
                                    const total = data.total || 0;
                                    const presents = data.present || 0;
                                    if (total > 0) {
                                        chartElement.style.display = 'block';
                                        const absents = total - presents;
                                        charts[chartId] = new Chart(chartElement, commonPieConfig([presents, absents], ['Présents', 'Absents']));
                                        const perc = Math.round((presents / total) * 100);
                                        statsElement.innerHTML = `
                                            <span class="badge badge-success">Présents: ${presents} (${perc}%)</span>
                                            <span class="badge badge-danger">Absents: ${absents}</span>
                                            <span class="badge badge-total">Total: ${total}</span>
                                        `;
                                    } else { 
                                        statsElement.textContent = "Aucune donnée."; 
                                        chartElement.style.display = 'none'; 
                                    }
                                }
                            }
                        });
                    }
                }

                renderCharts();

                // Vérification Quorum
                const quorumCheckInterval = 30000;
                let quorumCheckTimerId = null;
                async function checkQuorum() {
                    try {
                        const response = await fetch(`/event/${eventId}/check_presence`, { 
                            method: 'POST', 
                            headers: { 'Content-Type': 'application/json', 'Accept': 'application/json' } 
                        });
                        if (!response.ok) { 
                            console.warn(`Erreur check_presence: ${response.status}`); 
                            return; 
                        }
                        const data = await response.json();
                        if (data.quorum !== undefined && data.quorum > 0) {
                            const key = `quorumNotified_${eventId}_${data.quorum}`;
                            if (data.quorumAtteint) {
                                if (!localStorage.getItem(key)) {
                                    localStorage.setItem(key, Date.now().toString());
                                    Swal.fire({ 
                                        icon: 'success', 
                                        title: 'Quorum Atteint !', 
                                        html: `<b>${data.presentUsers || 0}</b> présents (quorum: <b>${data.quorum}</b>).<br><i>${data.eventName || 'Événement'}</i>.`, 
                                        confirmButtonText: 'Compris', 
                                        timer: 15000, 
                                        timerProgressBar: true 
                                    });
                                }
                            } else { 
                                localStorage.removeItem(key); 
                            }
                        }
                    } catch (err) { 
                        console.error('Erreur fetch checkQuorum:', err); 
                    }
                }

                checkQuorum();
                quorumCheckTimerId = setInterval(checkQuorum, quorumCheckInterval);
            });
        })();
    </script>

