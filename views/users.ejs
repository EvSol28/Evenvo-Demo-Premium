<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Utilisateur</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">NocEvent</a>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/dashboard">Tableau de bord</a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Page de l'utilisateur (si un utilisateur spécifique est passé) -->
    <% if (user) { %>
        <div class="container mt-5">
            <h2 class="text-center">Profil de l'utilisateur</h2>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Nom: <%= user.nom %></h5>
                    <h5 class="card-title">Prénom: <%= user.prenom %></h5>
                    <p class="card-text">Rôle: <%= user.role %></p>
                    <p class="card-text">Email: <%= user.email || 'Non fourni' %></p>
                    <a href="/edit_user/<%= user._id %>" class="btn btn-warning">Modifier</a>
                </div>
            </div>
        </div>
    <% } %>

    <!-- Tableau des utilisateurs (si la liste est passée) -->
    <% if (users && users.length > 0) { %>
        <div class="container mt-4">
            <h3>Liste des utilisateurs</h3>
            <table class="table mt-4">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Rôle</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %> <!-- Boucle pour chaque utilisateur -->
                        <tr>
                            <td><%= user.nom %></td>
                            <td><%= user.prenom %></td>
                            <td><%= user.role %></td>
                            <td><%= user.email || 'Non fourni' %></td>
                            <td>
                                <a href="/edit_user/<%= user._id %>" class="btn btn-warning">Modifier</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    <% } %>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>

</body>
</html>
