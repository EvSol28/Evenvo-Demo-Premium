                <div class="col-lg-4 col-md-6">
                    <h3>Invitations</h3>
                    <div class="chart-container"><canvas id="invitationChart"></canvas></div>
                    <p id="invitationStats" class="chart-stats">Chargement...</p>
                </div>
                <div class="col-lg-4 col-md-6">
                    <h3>Présence</h3>
                    <div class="chart-container"><canvas id="presenceChart"></canvas></div>
                    <p id="presenceStats" class="chart-stats">Chargement...</p>
                </div>
                <div class="col-lg-4 col-md-6">
                    <h3>Votes</h3>
                    <div class="chart-container"><canvas id="voteChart"></canvas></div>
