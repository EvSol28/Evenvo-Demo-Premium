    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.9.1/dist/chart.min.js"></script>
    <script>
        async function fetchUserInfo() {
            try {
                const response = await fetch('/get_user_info');
                if (!response.ok) throw new Error(`Erreur HTTP: ${response.status}`);
                const user = await response.json();
                const fullName = `${user.name || ''} ${user.surname || ''}`.trim();
                document.getElementById('userFullName').textContent = fullName || 'Utilisateur';
                document.getElementById('userEmail').textContent = user.email || 'Email non disponible';
            } catch (error) {
                console.error('Erreur fetchUserInfo:', error);
                document.getElementById('userFullName').textContent = 'Erreur';
                document.getElementById('userEmail').textContent = 'Indisponible';
            }
        }

        document.addEventListener('DOMContentLoaded', () => {
            fetchUserInfo();

            const userRows = document.querySelectorAll('.user-row');
            const statsContainer = document.getElementById('statsContainer');
            const userStatsDiv = document.getElementById('userStats');
            const statsTitle = document.getElementById('statsTitle');
            const userEventsCount = document.getElementById('userEventsCount');
            const eventCountValue = document.getElementById('eventCountValue');
            let invitationChart, presenceChart, voteChart;

            if (statsContainer) statsContainer.style.display = 'none';

            userRows.forEach(row => {
                row.addEventListener('click', async () => {
                    userRows.forEach(r => r.classList.remove('selected'));
                    row.classList.add('selected');
                    const userId = row.dataset.id;
                    const userName = row.dataset.name;
                    const userSurname = row.dataset.surname;

                    statsTitle.textContent = `Statistiques : ${userName} ${userSurname}`;
                    userStatsDiv.innerHTML = `<p class="text-center text-muted py-3">Chargement...</p>`;
                    destroyCharts();
                    statsContainer.style.display = 'block';
                    userEventsCount.style.display = 'none'; // Masquer par défaut
                    window.scrollTo({ top: statsContainer.offsetTop - 100, behavior: 'smooth' });

                    try {
                        const response = await fetch(`/api/user_stats?userId=${userId}`);
                        if (!response.ok) throw new Error(`Erreur ${response.status}`);
                        const stats = await response.json();
                        displayUserStats(stats);
                        renderCharts(stats);
                    } catch (error) {
                        console.error('Erreur chargement stats:', error);
                        userStatsDiv.innerHTML = `<p class="text-center text-danger py-3">Erreur chargement stats.</p>`;
                        destroyCharts();
                        userEventsCount.style.display = 'none';
                    }
                });
            });

            function displayUserStats(stats) {
                let tableHTML = `
                    <div class="table-responsive-scrollable">
                        <table class="table table-sm table-bordered table-hover align-middle">
                            <thead><tr><th>ID Événement</th><th>Nom</th><th>Présence</th><th>Vote</th></tr></thead>
                            <tbody>`;
                const eventCount = stats.events && stats.events.length > 0 ? stats.events.length : 0;
                if (stats.events && stats.events.length > 0) {
                    stats.events.forEach(event => {
                        const presenceBadgeClass = event.presence === true ? 'badge-success' : event.presence === false ? 'badge-danger' : 'badge-secondary';
                        const presenceText = event.presence === true ? 'Présence' : event.presence === false ? 'Absence' : 'N/D';
                        let voteBadgeClass = 'badge-secondary';
                        let voteText = 'Non voté';
                        if (event.vote === 'Oui') { voteBadgeClass = 'badge-success'; voteText = 'Oui'; }
                        else if (event.vote === 'Non') { voteBadgeClass = 'badge-danger'; voteText = 'Non'; }
                        else if (event.vote === "S'abstenir") { voteBadgeClass = 'badge-warning'; voteText = 'Abstention'; }

                        tableHTML += `<tr>
                                        <td>${event.eventId || '-'}</td>
                                        <td>${event.name || 'N/A'}</td>
                                        <td><span class="badge ${presenceBadgeClass}">${presenceText}</span></td>
                                        <td><span class="badge ${voteBadgeClass}">${voteText}</span></td>
                                     </tr>`;
                    });
                } else {
                    tableHTML += '<tr><td colspan="4" class="text-center text-muted py-3">Aucun événement associé.</td></tr>';
                }
                tableHTML += '</tbody></table></div>';
                userStatsDiv.innerHTML = tableHTML;

                // Mise à jour du carreau pour le nombre d'événements
                eventCountValue.textContent = eventCount;
                userEventsCount.style.display = 'block'; // Afficher en block pour pleine largeur
            }

            function destroyCharts() {
                if (invitationChart) invitationChart.destroy();
                if (presenceChart) presenceChart.destroy();
                if (voteChart) voteChart.destroy();
                invitationChart = null; presenceChart = null; voteChart = null;
                ['invitationChart', 'presenceChart', 'voteChart'].forEach(id => {
                    const canvas = document.getElementById(id);
                    if (canvas) { const ctx = canvas.getContext('2d'); ctx.clearRect(0, 0, canvas.width, canvas.height); }
                });
            }

            const commonPieConfigCode1 = (chartDataValues, chartLabels) => ({
                type: 'doughnut',
                data: { 
                    labels: chartLabels, 
                    datasets: [{ 
                        data: chartDataValues, 
                        backgroundColor: [
                            'rgba(75, 192, 192, 0.08)',  // Présents/Invités (transparent)
                            'rgba(247, 70, 74, 0.08)'     // Absents/Non invités (transparent)
                        ],
                        borderColor: [
                            'rgba(75, 192, 192, 0.5)',   // Bordure Présents/Invités
                            'rgba(247, 70, 74, 0.5)'     // Bordure Absents/Non invités
                        ],
                        borderWidth: 1.5,
                        hoverBackgroundColor: [
                            'rgba(75, 192, 192, 1)',
                            'rgba(247, 70, 74, 1)'
                        ],
                        hoverBorderColor: [
                            'rgba(75, 192, 192, 1)',
                            'rgba(247, 70, 74, 1)'
                        ],
                        borderRadius: 5,
                    }] 
                },
                options: { 
                    responsive: true, 
                    maintainAspectRatio: false,
                    cutout: '70%',
                    plugins: { 
                        legend: { 
                            display: true, 
                            position: 'bottom', 
                            labels: { 
                                padding: 15, 
                                font: { size: 12 }, 
                                color: 'var(--gray)',
                                boxWidth: 20,
                                usePointStyle: true
                            } 
                        }, 
                        tooltip: { 
                            enabled: true, 
                            callbacks: { 
                                label: function(context) { 
                                    let l = context.label || ''; 
                                    if (l) l += ': '; 
                                    if (context.parsed !== null) { 
                                        const t = context.dataset.data.reduce((a, b) => a + b, 0); 
                                        const p = t > 0 ? Math.round((context.parsed / t) * 100) : 0; 
                                        l += `${context.parsed} (${p}%)`; 
                                    } 
                                    return l; 
                                } 
                            } 
                        } 
                    },
                    animation: {
                        animateRotate: true,
                        animateScale: true
                    }
                }
            });

            const votePieConfigCode2 = (chartDataValues, chartLabels) => ({
                type: 'doughnut',
                data: { 
                    labels: chartLabels, 
                    datasets: [{ 
                        data: chartDataValues, 
                        backgroundColor: [
                            'rgba(75, 192, 192, 0.08)',  // Oui
                            'rgba(247, 70, 74, 0.08)',   // Non
                            'rgba(255, 206, 86, 0.08)',  // Abstention
                            'rgba(108, 117, 125, 0.08)'  // Non voté
                        ],
                        borderColor: [
                            'rgba(75, 192, 192, 0.5)',
                            'rgba(247, 70, 74, 0.5)',
                            'rgba(255, 206, 86, 0.5)',
                            'rgba(108, 117, 125, 0.5)'
                        ],
                        borderWidth: 1.5,
                        hoverBackgroundColor: [
                            'rgba(75, 192, 192, 1)',
                            'rgba(247, 70, 74, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(108, 117, 125, 1)'
                        ],
                        hoverBorderColor: [
                            'rgba(75, 192, 192, 1)',
                            'rgba(247, 70, 74, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(108, 117, 125, 1)'
                        ],
                        borderRadius: 5,
                    }] 
                },
                options: { 
                    responsive: true, 
                    maintainAspectRatio: false,
                    cutout: '70%',
                    plugins: { 
                        legend: { 
                            display: true, 
                            position: 'bottom', 
                            labels: { 
                                padding: 15, 
                                font: { size: 12 }, 
                                color: 'var(--gray)',
                                boxWidth: 20,
                                usePointStyle: true
                            } 
                        }, 
                        tooltip: { 
                            enabled: true, 
                            callbacks: { 
                                label: function(context) { 
                                    let l = context.label || ''; 
                                    if (l) l += ': '; 
                                    if (context.parsed !== null) { 
                                        const t = context.dataset.data.reduce((a, b) => a + b, 0); 
                                        const p = t > 0 ? Math.round((context.parsed / t) * 100) : 0; 
                                        l += `${context.parsed} (${p}%)`; 
                                    } 
                                    return l; 
                                } 
                            } 
                        } 
                    },
                    animation: {
                        animateRotate: true,
                        animateScale: true
                    }
                }
            });

            function renderCharts(stats) {
                destroyCharts();

                // Graphique Invitation
                const totalEvents = stats.totalEvents || 0;
                const invitedEvents = stats.events.length;
                const notInvitedEvents = totalEvents - invitedEvents;
                const invitationStatsElement = document.getElementById('invitationStats');
                if (invitationStatsElement) {
                    if (totalEvents > 0) {
                        const percInvited = Math.round((invitedEvents / totalEvents) * 100);
                        invitationStatsElement.innerHTML = `
                            <span class="badge badge-success">Invité: ${invitedEvents} (${percInvited}%)</span>
                            <span class="badge badge-danger">Non invité: ${notInvitedEvents}</span>
                            <span class="badge badge-total">Total: ${totalEvents}</span>
                        `;
                    } else {
                        invitationStatsElement.textContent = "Aucune donnée.";
                    }
                }
                invitationChart = new Chart(document.getElementById('invitationChart'), 
                    commonPieConfigCode1(
                        [invitedEvents, notInvitedEvents],
                        ['Invité', 'Non invité']
                    )
                );

                // Graphique Présence
                const presentCount = stats.events.filter(e => e.presence).length;
                const absentCount = invitedEvents - presentCount;
                const presenceStatsElement = document.getElementById('presenceStats');
                if (presenceStatsElement) {
                    if (invitedEvents > 0) {
                        const percPresent = Math.round((presentCount / invitedEvents) * 100);
                        presenceStatsElement.innerHTML = `
                            <span class="badge badge-success">Présence: ${presentCount} (${percPresent}%)</span>
                            <span class="badge badge-danger">Absence: ${absentCount}</span>
                            <span class="badge badge-total">Total: ${invitedEvents}</span>
                        `;
                    } else {
                        presenceStatsElement.textContent = "Aucune donnée.";
                    }
                }
                presenceChart = new Chart(document.getElementById('presenceChart'), 
                    commonPieConfigCode1(
                        [presentCount, absentCount],
                        ['Présence', 'Absence']
                    )
                );

                // Graphique Vote
                const voteStats = { Oui: 0, Non: 0, "Abstention": 0, "Non voté": 0 };
                stats.events.forEach(event => {
                    const vote = event.presence && event.vote ? (event.vote === "S'abstenir" ? "Abstention" : event.vote) : 'Non voté';
                    voteStats[vote]++;
                });
                const totalVotes = voteStats.Oui + voteStats.Non + voteStats.Abstention + voteStats["Non voté"];
                const voteStatsElement = document.getElementById('voteStats');
                if (voteStatsElement) {
                    if (totalVotes > 0) {
                        const percOui = Math.round((voteStats.Oui / totalVotes) * 100);
                        voteStatsElement.innerHTML = `
                            <span class="badge badge-success">Oui: ${voteStats.Oui} (${percOui}%)</span>
                            <span class="badge badge-danger">Non: ${voteStats.Non}</span>
                            <span class="badge badge-warning">Abstention: ${voteStats.Abstention}</span>
                            <span class="badge badge-secondary">Non voté: ${voteStats["Non voté"]}</span>
                            <span class="badge badge-total">Total: ${totalVotes}</span>
                        `;
                    } else {
                        voteStatsElement.textContent = "Aucune donnée.";
                    }
                }
                voteChart = new Chart(document.getElementById('voteChart'), 
                    votePieConfigCode2(
                        [voteStats.Oui, voteStats.Non, voteStats.Abstention, voteStats["Non voté"]],
                        ['Oui', 'Non', 'Abstention', 'Non voté']
                    )
                );
            }
        });
    </script>
