        <!-- Section Statistiques -->
        <div class="content-block chart-section" id="statsContainer">
            <h2 id="statsTitle">Statistiques Utilisateur</h2>
            <div id="userStats">
                <p class="text-center text-muted">Sélectionnez un utilisateur dans la liste pour voir ses statistiques.</p>
            </div>
            <!-- Nombre total d'événements dans un carreau -->
            <div class="counts-container">
                <span id="userEventsCount" class="form-control" style="display: none;">
                    Nombre total d'évènements associés : <span id="eventCountValue">0</span>
                </span>
            </div>
