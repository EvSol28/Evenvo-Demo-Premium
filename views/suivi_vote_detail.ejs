                    options: { 
                        responsive: true, 
                        maintainAspectRatio: false,
                        cutout: '70%',
                        plugins: { 
                            legend: { 
                                display: true, 
                                position: 'bottom', 
                                labels: { 
                                    padding: 15, 
                                    font: { size: 12 }, 
                                    color: 'var(--gray)',
                                    boxWidth: 20,
                                    usePointStyle: true
                                } 
