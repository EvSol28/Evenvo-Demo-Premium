                    },
                    scales: {
                        x: {
                            grid: {
                                display: false
                            },
                            ticks: {
                                color: '#64748B',
                                font: {
                                    size: 12,
                                    weight: '500'
                                }
                            }
                        },
                        y: {
                            beginAtZero: true,
                            grid: {
                                color: 'rgba(148, 163, 184, 0.1)',
                                drawBorder: false
                            },
                            ticks: {
                                stepSize: 1,
                                color: '#64748B',
                                font: {
                                    size: 12
                                }
                            }
                        }
                    },
                    elements: {
                        bar: {
                            borderRadius: 4
                        }
                    }
                }
            });
        }

        // Charger les statistiques syndicales au chargement de la page
        document.addEventListener('DOMContentLoaded', function() {
            <% if (form && form.fields && form.fields.some(field => field.type === 'syndical')) { %>
            loadSyndicalStatistics();
            <% } %>
            <% if (form && form.fields && (form.fields.some(field => field.type === 'radio') || form.fields.some(field => field.type === 'checkbox'))) { %>
            loadChoiceResults();
            <% } %>
        });
    </script>
