        <!-- Bloc Table des utilisateurs -->
        <div class="content-block">
            <h2>Liste des Participants et Statut de Vote</h2>
            <% let eligibleCount = 0; %>
            <% if (users && users.length > 0) { %>
                <% users.forEach(user => { %>
                    <% if (user && user.voteEnabled && user.id && user.name && user.surname) { %>
                        <% eligibleCount++; %>
                    <% } %>
                <% }); %>
            <% } %>

            <div class="controls-container">
                <div class="search-container">
                    <input type="text" id="searchInput" class="form-control" placeholder="Rechercher par nom ou prénom...">
                </div>
            </div>

            <div class="table-responsive-scrollable">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th data-column="id" data-sort="none">ID <span class="arrow"></span></th>
                            <th data-column="name" data-sort="none">Nom <span class="arrow"></span></th>
                            <th data-column="surname" data-sort="none">Prénom <span class="arrow"></span></th>
                            <th data-column="civility" data-sort="none">Civilité <span class="arrow"></span></th>
                            <th data-column="birthdate" data-sort="none">Date de naissance <span class="arrow"></span></th>
                            <th data-column="email" data-sort="none">Email <span class="arrow"></span></th>
                            <th data-column="role" data-sort="none">Rôle <span class="arrow"></span></th>
                            <th data-column="vote" data-sort="none">Vote <span class="arrow"></span></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (users && users.length > 0) { %>
                            <% let hasEligibleUsers = false; %>
                            <% users.forEach(user => { %>
                                <% if (user && user.voteEnabled && user.id && user.name && user.surname) { %>
                                    <% hasEligibleUsers = true; %>
                                    <tr>
                                        <td><%= user.id %></td>
                                        <td><%= user.name %></td>
                                        <td><%= user.surname %></td>
                                        <td><%= user.civility || '-' %></td>
                                        <td><%= user.birthdate || '-' %></td>
                                        <td><%= user.email || '-' %></td>
                                        <td><%= user.role || '-' %></td>
                                        <td>
                                            <% if (user.hasVoted) { %>
                                                <% if (form && form.fields && form.fields.some(field => field.type === 'ranking')) { %>
                                                    <span class="badge" onclick="showRankingDetails('<%= user.id %>', '<%= user.name %>', '<%= user.surname %>')" 
                                                          style="background: rgba(13, 148, 136, 0.15); 
                                                                 color: rgba(13, 148, 136, 0.9); 
                                                                 border: 1px solid rgba(13, 148, 136, 0.3); 
                                                                 backdrop-filter: blur(10px); 
                                                                 cursor: pointer; 
                                                                 padding: 6px 12px; 
                                                                 border-radius: 20px; 
                                                                 font-size: 12px; 
                                                                 font-weight: 600; 
                                                                 transition: all 0.3s ease;">
                                                        <i class="fas fa-eye" style="margin-right: 5px;"></i> Voté
                                                    </span>
                                                <% } else { %>
                                                    <span class="badge" style="background: linear-gradient(135deg, #0D9488 0%, #14B8A6 100%); 
                                                                               color: white; 
                                                                               border-radius: 20px; 
                                                                               padding: 8px 16px; 
                                                                               font-size: 12px; 
                                                                               font-weight: 600;">
                                                        <%= user.voteChoice || 'Voté' %>
                                                    </span>
                                                <% } %>
                                            <% } else { %>
                                                <span class="badge" style="background: #6c757d; 
                                                                           color: white; 
                                                                           border-radius: 20px; 
                                                                           padding: 8px 16px; 
                                                                           font-size: 12px; 
                                                                           font-weight: 600;">Non voté</span>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% } %>
                            <% }); %>
