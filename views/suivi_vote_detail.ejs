                                { bg: 'rgba(247, 70, 74, 0.08)', border: 'rgba(247, 70, 74, 0.5)', hover: 'rgba(247, 70, 74, 1)' },
                                { bg: 'rgba(255, 206, 86, 0.08)', border: 'rgba(255, 206, 86, 0.5)', hover: 'rgba(255, 206, 86, 1)' },
                                { bg: 'rgba(108, 117, 125, 0.08)', border: 'rgba(108, 117, 125, 0.5)', hover: 'rgba(108, 117, 125, 1)' },
