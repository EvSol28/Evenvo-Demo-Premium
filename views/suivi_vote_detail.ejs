    <script>
        (function() {
            async function fetchUserInfo() {
                try {
                    const response = await fetch('/get_user_info');
                    if (!response.ok) throw new Error(`Erreur HTTP: ${response.status}`);
                    const user = await response.json();
                    const fullName = `${user.name || ''} ${user.surname || ''}`.trim();
                    document.getElementById('userFullName').textContent = fullName || 'Utilisateur';
                    document.getElementById('userEmail').textContent = user.email || 'Email non disponible';
                } catch (error) {
                    console.error('Erreur fetchUserInfo:', error);
                    document.getElementById('userFullName').textContent = 'Erreur';
                    document.getElementById('userEmail').textContent = 'Indisponible';
                }
            }

            document.addEventListener('DOMContentLoaded', function () {
                fetchUserInfo();
                const eventId = "<%= eventId %>";
                const chartData = <% try { %><%- JSON.stringify(chartData || []) %><% } catch(e) { %>[]<% } %>;
                const totalByRole = <% try { %><%- JSON.stringify(totalByRole || []) %><% } catch(e) { %>[]<% } %>;
                const searchInput = document.getElementById("searchInput");
                const tableBody = document.querySelector("table tbody");
                const tableElement = document.querySelector('.table');
                const voteUsersCountSpan = document.getElementById("voteUsersCount");
                const tableHeaders = document.querySelectorAll('th[data-column]');

                function updateVoteUsersCount() {
                    if (!voteUsersCountSpan) return;
                    const visibleRows = tableBody.querySelectorAll("tr:not([style*='display: none']):not(.no-results)");
                    let count = 0;
                    visibleRows.forEach(row => {
                        if (!row.querySelector("td[colspan='8']")) count++;
                    });
                    voteUsersCountSpan.textContent = `Nombre total d'utilisateurs éligibles : ${count}`;
                }

                if (searchInput && tableBody) {
                    searchInput.addEventListener("input", function () {
                        const searchQuery = this.value.toLowerCase().trim();
                        const rows = tableBody.querySelectorAll("tr:not(.no-results)");
                        let hasVisibleRows = false;

                        rows.forEach(row => {
                            if (row.querySelector("td[colspan='8']")) { 
                                row.style.display = 'none'; 
                                return; 
                            }
                            const nameCell = row.querySelector("td:nth-child(2)");
                            const surnameCell = row.querySelector("td:nth-child(3)");
                            const name = nameCell ? nameCell.textContent.toLowerCase() : '';
                            const surname = surnameCell ? surnameCell.textContent.toLowerCase() : '';

                            if (name.includes(searchQuery) || surname.includes(searchQuery)) {
                                row.style.display = ""; 
                                hasVisibleRows = true;
                            } else {
                                row.style.display = "none";
                            }
                        });

                        let noResultRow = tableBody.querySelector("tr.no-results");
                        if (!hasVisibleRows && searchQuery !== '') {
                            if (!noResultRow) {
                                noResultRow = document.createElement('tr'); 
                                noResultRow.classList.add('no-results');
                                noResultRow.innerHTML = `<td colspan="8" class="text-center text-muted py-3"></td>`;
                                tableBody.appendChild(noResultRow);
                            }
                            noResultRow.style.display = '';
                            noResultRow.querySelector('td').textContent = `Aucun résultat pour "${this.value}"`;
                        } else if (noResultRow) {
                            noResultRow.style.display = 'none';
                        }
                        updateVoteUsersCount();
                    });
                }

                function getColumnIndex(column) {
                    const headers = Array.from(tableHeaders);
                    return headers.findIndex(th => th.getAttribute('data-column') === column);
                }

                function sortTable(column, order) {
                    if (!tableBody) return;
                    const rows = Array.from(tableBody.querySelectorAll('tr:not(:has(td[colspan="8"])):not(.no-results)'));
                    const columnIndex = getColumnIndex(column);
                    if (columnIndex === -1) return;

                    rows.sort((rowA, rowB) => {
                        const cellAElement = rowA.querySelector(`td:nth-child(${columnIndex + 1})`);
                        const cellBElement = rowB.querySelector(`td:nth-child(${columnIndex + 1})`);
                        let cellA = cellAElement ? cellAElement.textContent.trim() : '';
                        let cellB = cellBElement ? cellBElement.textContent.trim() : '';

                        if (column === 'vote') {
                            const voteOrder = { 'Oui': 1, 'Non': 2, "S'abstenir": 3, 'Non voté': 4 };
                            cellA = voteOrder[cellA] || 0; 
                            cellB = voteOrder[cellB] || 0;
                        } else if (column === 'id') {
                            cellA = parseFloat(cellA) || Infinity; 
                            cellB = parseFloat(cellB) || Infinity;
                        } else {
                            cellA = cellA.toLowerCase(); 
                            cellB = cellB.toLowerCase();
                        }

                        let comparison = 0;
                        if (cellA > cellB) comparison = 1;
                        else if (cellA < cellB) comparison = -1;
                        return order === 'asc' ? comparison : (comparison * -1);
                    });

                    rows.forEach(row => tableBody.appendChild(row));
                }

                if (tableElement) {
                    tableHeaders.forEach(th => {
                        th.addEventListener('click', function () {
                            const column = th.getAttribute('data-column');
                            if (!column) return;
                            let currentOrder = th.getAttribute('data-sort');
                            let newOrder = (currentOrder === 'asc') ? 'desc' : 'asc';

                            tableHeaders.forEach(header => {
                                if (header !== th) {
                                    header.setAttribute('data-sort', 'none');
                                    header.querySelector('.arrow')?.setAttribute('class', 'arrow');
                                }
                            });

                            th.setAttribute('data-sort', newOrder);
                            th.querySelector('.arrow')?.setAttribute('class', `arrow ${newOrder}`);
                            sortTable(column, newOrder);
                            updateVoteUsersCount();
                        });
                    });
                }

                let charts = {};

                function destroyChart(canvasId) {
                    if (charts[canvasId]) { 
                        charts[canvasId].destroy(); 
                        delete charts[canvasId]; 
                    }
                }

                const commonPieConfig = (chartDataValues, chartLabels) => ({
                    type: 'doughnut',
                    data: { 
                        labels: chartLabels, 
                        datasets: [{ 
                            data: chartDataValues, 
                            backgroundColor: [
                                'rgba(75, 192, 192, 0.08)',  // Oui
                                'rgba(247, 70, 74, 0.08)',   // Non
                                'rgba(255, 206, 86, 0.08)',  // S'abstenir
                                'rgba(108, 117, 125, 0.08)'  // Non voté
                            ],
                            borderColor: [
                                'rgba(75, 192, 192, 0.5)',
                                'rgba(247, 70, 74, 0.5)',
                                'rgba(255, 206, 86, 0.5)',
                                'rgba(108, 117, 125, 0.5)'
                            ],
                            borderWidth: 1.5,
                            hoverBackgroundColor: [
                                'rgba(75, 192, 192, 1)',
                                'rgba(247, 70, 74, 1)',
                                'rgba(255, 206, 86, 1)',
                                'rgba(108, 117, 125, 1)'
                            ],
                            hoverBorderColor: [
                                'rgba(75, 192, 192, 1)',
                                'rgba(247, 70, 74, 1)',
                                'rgba(255, 206, 86, 1)',
                                'rgba(108, 117, 125, 1)'
                            ],
                            borderRadius: 5,
                        }] 
                    },
                    options: { 
                        responsive: true, 
                        maintainAspectRatio: false,
                        cutout: '70%',
                        plugins: { 
                            legend: { 
                                display: true, 
                                position: 'bottom', 
                                labels: { 
                                    padding: 15, 
                                    font: { size: 12 }, 
                                    color: 'var(--gray)',
                                    boxWidth: 20,
                                    usePointStyle: true
                                } 
                            }, 
                            tooltip: { 
                                enabled: true, 
                                callbacks: { 
                                    label: function(context) { 
                                        let l = context.label || ''; 
                                        if (l) l += ': '; 
                                        if (context.parsed !== null) { 
                                            const t = context.dataset.data.reduce((a, b) => a + b, 0); 
                                            const p = t > 0 ? Math.round((context.parsed / t) * 100) : 0; 
                                            l += `${context.parsed} (${p}%)`; 
                                        } 
                                        return l; 
                                    } 
                                } 
                            } 
                        },
                        animation: {
                            animateRotate: true,
                            animateScale: true
                        }
                    }
                });

                function renderCharts() {
                    const totalChartElement = document.getElementById('totalChart');
                    const totalStatsElement = document.getElementById('totalStats');
                    const formChoices = <%- JSON.stringify(formChoices || []) %>;
                    const globalStats = <%- JSON.stringify(globalStats || {}) %>;

                    // Couleurs pour les graphiques
                    const colors = [
                        { bg: 'rgba(75, 192, 192, 0.08)', border: 'rgba(75, 192, 192, 0.5)', hover: 'rgba(75, 192, 192, 1)' },
                        { bg: 'rgba(247, 70, 74, 0.08)', border: 'rgba(247, 70, 74, 0.5)', hover: 'rgba(247, 70, 74, 1)' },
                        { bg: 'rgba(255, 206, 86, 0.08)', border: 'rgba(255, 206, 86, 0.5)', hover: 'rgba(255, 206, 86, 1)' },
                        { bg: 'rgba(108, 117, 125, 0.08)', border: 'rgba(108, 117, 125, 0.5)', hover: 'rgba(108, 117, 125, 1)' },
                        { bg: 'rgba(153, 102, 255, 0.08)', border: 'rgba(153, 102, 255, 0.5)', hover: 'rgba(153, 102, 255, 1)' },
                        { bg: 'rgba(255, 159, 64, 0.08)', border: 'rgba(255, 159, 64, 0.5)', hover: 'rgba(255, 159, 64, 1)' }
                    ];

                    if (totalChartElement && totalStatsElement) {
                        destroyChart('totalChart');
                        if (globalStats && globalStats.total > 0) {
                            // Vérifier si c'est un vote par ordre (ranking)
                            const form = <%- JSON.stringify(form || {}) %>;
                            const isRankingVote = formChoices.length === 0 || (form.fields && form.fields.some(field => field.type === 'ranking'));
                            
                            // Préparer les données pour le graphique global
                            const chartLabels = [];
                            const chartValues = [];
                            const backgroundColors = [];
                            const borderColors = [];
                            
                            // Couleurs dynamiques pour les choix
                            const colors = [
                                { bg: 'rgba(75, 192, 192, 0.08)', border: 'rgba(75, 192, 192, 0.5)', hover: 'rgba(75, 192, 192, 1)' },
                                { bg: 'rgba(247, 70, 74, 0.08)', border: 'rgba(247, 70, 74, 0.5)', hover: 'rgba(247, 70, 74, 1)' },
                                { bg: 'rgba(255, 206, 86, 0.08)', border: 'rgba(255, 206, 86, 0.5)', hover: 'rgba(255, 206, 86, 1)' },
                                { bg: 'rgba(108, 117, 125, 0.08)', border: 'rgba(108, 117, 125, 0.5)', hover: 'rgba(108, 117, 125, 1)' },
                                { bg: 'rgba(153, 102, 255, 0.08)', border: 'rgba(153, 102, 255, 0.5)', hover: 'rgba(153, 102, 255, 1)' },
                                { bg: 'rgba(255, 159, 64, 0.08)', border: 'rgba(255, 159, 64, 0.5)', hover: 'rgba(255, 159, 64, 1)' }
                            ];

                            if (isRankingVote) {
                                // Pour les votes par ordre, afficher "Voté" et "Non voté"
                                if (globalStats.voted > 0) {
                                    chartLabels.push('Voté');
                                    chartValues.push(globalStats.voted);
                                    backgroundColors.push('rgba(13, 148, 136, 0.15)');
                                    borderColors.push('rgba(13, 148, 136, 0.5)');
                                }
                                
                                if (globalStats.notVoted > 0) {
                                    chartLabels.push('Non voté');
                                    chartValues.push(globalStats.notVoted);
                                    backgroundColors.push('rgba(107, 114, 128, 0.15)');
                                    borderColors.push('rgba(107, 114, 128, 0.5)');
                                }
                            } else {
                                // Pour les autres types de votes, afficher les choix spécifiques
                                formChoices.forEach((choice, index) => {
                                    const count = globalStats.choices[choice] || 0;
                                    if (count > 0) {
                                        chartLabels.push(choice);
                                        chartValues.push(count);
                                        const colorIndex = index % colors.length;
                                        backgroundColors.push(colors[colorIndex].bg);
                                        borderColors.push(colors[colorIndex].border);
                                    }
                                });

                                // Ajouter "Non voté" s'il y en a
                                if (globalStats.notVoted > 0) {
                                    chartLabels.push('Non voté');
                                    chartValues.push(globalStats.notVoted);
                                    backgroundColors.push('rgba(108, 117, 125, 0.08)');
                                    borderColors.push('rgba(108, 117, 125, 0.5)');
                                }
                            }

                            if (chartValues.length > 0) {
                                totalChartElement.style.display = 'block';
                                charts['totalChart'] = new Chart(totalChartElement, {
                                    type: 'doughnut',
                                    data: { 
                                        labels: chartLabels, 
                                        datasets: [{ 
                                            data: chartValues, 
                                            backgroundColor: backgroundColors,
                                            borderColor: borderColors,
                                            borderWidth: 1.5,
                                            hoverBackgroundColor: backgroundColors.map((_, i) => colors[i % colors.length].hover),
                                            hoverBorderColor: borderColors,
                                            borderRadius: 5,
                                        }] 
                                    },
                                    options: { 
                                        responsive: true, 
                                        maintainAspectRatio: false,
                                        cutout: '70%',
                                        plugins: { 
                                            legend: { 
                                                display: true, 
                                                position: 'bottom', 
                                                labels: { 
                                                    padding: 15, 
                                                    font: { size: 12 }, 
                                                    color: 'var(--gray)',
                                                    boxWidth: 20,
                                                    usePointStyle: true
                                                } 
                                            }, 
                                            tooltip: { 
                                                enabled: true, 
                                                callbacks: { 
                                                    label: function(context) { 
                                                        let l = context.label || ''; 
                                                        if (l) l += ': '; 
                                                        if (context.parsed !== null) { 
                                                            const t = context.dataset.data.reduce((a, b) => a + b, 0); 
                                                            const p = t > 0 ? Math.round((context.parsed / t) * 100) : 0; 
                                                            l += `${context.parsed} (${p}%)`; 
                                                        } 
                                                        return l; 
                                                    } 
                                                } 
                                            } 
                                        },
                                        animation: {
                                            animateRotate: true,
                                            animateScale: true
                                        }
                                    }
                                });

                                // Afficher les statistiques
                                let statsHtml = '';
                                
                                if (isRankingVote) {
                                    // Pour les votes par ordre
                                    if (globalStats.voted > 0) {
                                        const percentage = Math.round((globalStats.voted / globalStats.total) * 100);
                                        statsHtml += `<span class="badge badge-success">Voté: ${globalStats.voted} (${percentage}%)</span>`;
                                    }
                                    
                                    if (globalStats.notVoted > 0) {
                                        const percentage = Math.round((globalStats.notVoted / globalStats.total) * 100);
                                        statsHtml += `<span class="badge badge-secondary">Non voté: ${globalStats.notVoted} (${percentage}%)</span>`;
                                    }
                                } else {
                                    // Pour les autres types de votes
                                    formChoices.forEach((choice, index) => {
                                        const count = globalStats.choices[choice] || 0;
                                        if (count > 0) {
                                            const percentage = Math.round((count / globalStats.total) * 100);
                                            const colorClass = `badge-choice-${index % 6}`;
                                            statsHtml += `<span class="badge ${colorClass}">${choice}: ${count} (${percentage}%)</span>`;
                                        }
                                    });
                                    
                                    if (globalStats.notVoted > 0) {
                                        const percentage = Math.round((globalStats.notVoted / globalStats.total) * 100);
                                        statsHtml += `<span class="badge badge-secondary">Non voté: ${globalStats.notVoted} (${percentage}%)</span>`;
                                    }
                                }
                                
                                statsHtml += `<span class="badge badge-total">Total: ${globalStats.total}</span>`;
                                totalStatsElement.innerHTML = statsHtml;
                            } else { 
                                totalStatsElement.textContent = "Aucune donnée."; 
                                totalChartElement.style.display = 'none'; 
                            }
                        } else { 
                            totalStatsElement.textContent = "Données indisponibles."; 
                            totalChartElement.style.display = 'none'; 
                        }
                    }

                    // Graphiques par rôle
                    console.log('🔥 KIRO DEBUG JS - chartData:', chartData);
                    if (chartData && chartData.length > 0) {
                        console.log('🔥 KIRO DEBUG JS - Nombre de rôles:', chartData.length);
                        chartData.forEach(data => {
                            console.log('🔥 KIRO DEBUG JS - Traitement du rôle:', data.role, data);
                            const roleIdSuffix = data.role.toLowerCase().replace(/\s+/g, '-');
                            const chartId = `${roleIdSuffix}Chart`;
                            const statsId = `${roleIdSuffix}Stats`;
                            console.log('🔥 KIRO DEBUG JS - IDs générés:', chartId, statsId);
                            const chartElement = document.getElementById(chartId);
                            const statsElement = document.getElementById(statsId);
                            console.log('🔥 KIRO DEBUG JS - Éléments trouvés:', !!chartElement, !!statsElement);

                            if (chartElement && statsElement) {
                                destroyChart(chartId);
                                const total = data.total || 0;
                                console.log('🔥 KIRO DEBUG JS - Total pour ce rôle:', total);

                                if (total > 0) {
                                    // Préparer les données pour ce rôle
                                    const roleLabels = [];
                                    const roleValues = [];
                                    const roleBackgroundColors = [];
                                    const roleBorderColors = [];

                                    console.log('🔥 KIRO DEBUG JS - Choix du formulaire:', formChoices);
                                    console.log('🔥 KIRO DEBUG JS - Choix pour ce rôle:', data.choices);

                                    // Ajouter les choix du formulaire pour ce rôle
                                    formChoices.forEach((choice, index) => {
                                        const count = data.choices[choice] || 0;
                                        console.log(`🔥 KIRO DEBUG JS - Choix "${choice}": ${count}`);
                                        if (count > 0) {
                                            roleLabels.push(choice);
                                            roleValues.push(count);
                                            const colorIndex = index % colors.length;
                                            roleBackgroundColors.push(colors[colorIndex].bg);
                                            roleBorderColors.push(colors[colorIndex].border);
                                        }
                                    });

                                    // Ajouter "Non voté" s'il y en a
                                    if (data.notVoted > 0) {
                                        console.log(`🔥 KIRO DEBUG JS - Non voté: ${data.notVoted}`);
                                        roleLabels.push('Non voté');
                                        roleValues.push(data.notVoted);
                                        roleBackgroundColors.push('rgba(108, 117, 125, 0.08)');
                                        roleBorderColors.push('rgba(108, 117, 125, 0.5)');
                                    }

                                    console.log('🔥 KIRO DEBUG JS - Données finales pour graphique:', roleLabels, roleValues);

                                    if (roleValues.length > 0) {
                                        chartElement.style.display = 'block';
                                        charts[chartId] = new Chart(chartElement, {
                                            type: 'doughnut',
                                            data: { 
                                                labels: roleLabels, 
                                                datasets: [{ 
                                                    data: roleValues, 
                                                    backgroundColor: roleBackgroundColors,
                                                    borderColor: roleBorderColors,
                                                    borderWidth: 1.5,
                                                    hoverBackgroundColor: roleBackgroundColors.map((_, i) => colors[i % colors.length].hover),
                                                    hoverBorderColor: roleBorderColors,
                                                    borderRadius: 5,
                                                }] 
                                            },
                                            options: { 
                                                responsive: true, 
                                                maintainAspectRatio: false,
                                                cutout: '70%',
                                                plugins: { 
                                                    legend: { 
                                                        display: true, 
                                                        position: 'bottom', 
                                                        labels: { 
                                                            padding: 15, 
                                                            font: { size: 12 }, 
                                                            color: 'var(--gray)',
                                                            boxWidth: 20,
                                                            usePointStyle: true
                                                        } 
                                                    }, 
                                                    tooltip: { 
                                                        enabled: true, 
                                                        callbacks: { 
                                                            label: function(context) { 
                                                                let l = context.label || ''; 
                                                                if (l) l += ': '; 
                                                                if (context.parsed !== null) { 
                                                                    const t = context.dataset.data.reduce((a, b) => a + b, 0); 
                                                                    const p = t > 0 ? Math.round((context.parsed / t) * 100) : 0; 
                                                                    l += `${context.parsed} (${p}%)`; 
                                                                } 
                                                                return l; 
                                                            } 
                                                        } 
                                                    } 
                                                },
                                                animation: {
                                                    animateRotate: true,
                                                    animateScale: true
                                                }
                                            }
                                        });

                                        // Afficher les statistiques pour ce rôle
                                        let roleStatsHtml = '';
                                        
                                        // Ajouter "Voté" en premier
                                        if (data.voted > 0) {
                                            const percentage = Math.round((data.voted / total) * 100);
                                            roleStatsHtml += `<span class="badge badge-success">Voté: ${data.voted} (${percentage}%)</span>`;
                                        }
                                        
                                        // Puis les choix spécifiques
                                        formChoices.forEach((choice, index) => {
                                            const count = data.choices[choice] || 0;
                                            if (count > 0) {
                                                const percentage = Math.round((count / total) * 100);
                                                const colorClass = `badge-choice-${index % 6}`;
                                                roleStatsHtml += `<span class="badge ${colorClass}">${choice}: ${count} (${percentage}%)</span>`;
                                            }
                                        });
                                        
                                        // Puis "Non voté"
                                        if (data.notVoted > 0) {
                                            const percentage = Math.round((data.notVoted / total) * 100);
                                            roleStatsHtml += `<span class="badge badge-secondary">Non voté: ${data.notVoted} (${percentage}%)</span>`;
                                        }
                                        
                                        // Enfin le total
                                        roleStatsHtml += `<span class="badge badge-total">Total: ${total}</span>`;
                                        console.log('🔥 KIRO DEBUG JS - HTML des stats:', roleStatsHtml);
                                        statsElement.innerHTML = roleStatsHtml;
                                    } else { 
                                        console.log('🔥 KIRO DEBUG JS - Aucune donnée à afficher');
                                        statsElement.textContent = "Aucune donnée."; 
                                        chartElement.style.display = 'none'; 
                                    }
                                } else { 
                                    console.log('🔥 KIRO DEBUG JS - Total = 0');
                                    statsElement.textContent = "Aucune donnée."; 
                                    chartElement.style.display = 'none'; 
                                }
                            } else {
                                console.log('🔥 KIRO DEBUG JS - Éléments HTML non trouvés pour:', chartId, statsId);
                            }
                        });
                    } else {
                        console.log('🔥 KIRO DEBUG JS - Pas de chartData ou vide');
                    }
                }

                // Fonction pour rendre les graphiques de ranking
                function renderRankingCharts() {
                    const voteForm = <%- JSON.stringify(form || {}) %>;
                    
                    // Vérifier s'il y a des champs de ranking
                    const rankingField = voteForm.fields && voteForm.fields.find(field => field.type === 'ranking');
                    if (!rankingField) return;
                    
                    // Récupérer les statistiques de ranking depuis le serveur
                    fetch(`/api/event/<%= eventId %>/ranking_stats/<%= form.id %>`)
                        .then(response => response.json())
                        .then(data => {
                            if (data.success && data.rankingStats) {
                                renderFinalRankingTable(data.rankingStats);
                                renderRankingChart(data.rankingStats);
                            }
                        })
                        .catch(error => {
                            console.error('Erreur lors du chargement des statistiques de ranking:', error);
                        });
                }
                
                function renderFinalRankingTable(rankingStats) {
                    const tableBody = document.getElementById('finalRankingTable');
                    if (!tableBody) return;
                    
                    // Créer un tableau trié par nombre de 1ères places, puis par rang moyen
                    const sortedOptions = Object.keys(rankingStats.winnerByVotes)
                        .map(option => ({
                            option,
                            firstPlaces: rankingStats.winnerByVotes[option],
                            averageRank: parseFloat(rankingStats.averageRanks[option].average) || 999
                        }))
                        .sort((a, b) => {
                            if (b.firstPlaces !== a.firstPlaces) {
                                return b.firstPlaces - a.firstPlaces; // Plus de 1ères places d'abord
                            }
                            return a.averageRank - b.averageRank; // Meilleur rang moyen ensuite
                        });
                    
                    let html = '';
                    sortedOptions.forEach((item, index) => {
                        const medal = index === 0 ? '🥇' : index === 1 ? '🥈' : index === 2 ? '🥉' : '';
                        const rowStyle = index < 3 ? 'background: rgba(13, 148, 136, 0.05);' : '';
                        const firstPlacesStyle = item.firstPlaces > 0 
                            ? 'background: rgba(13, 148, 136, 0.15); color: rgba(13, 148, 136, 0.9); border: 1px solid rgba(13, 148, 136, 0.3); backdrop-filter: blur(10px);'
                            : 'background: rgba(108, 117, 125, 0.15); color: rgba(108, 117, 125, 0.9); border: 1px solid rgba(108, 117, 125, 0.3); backdrop-filter: blur(10px);';
                        
                        const avgRankStyle = 'background: rgba(108, 117, 125, 0.15); color: rgba(108, 117, 125, 0.9); border: 1px solid rgba(108, 117, 125, 0.3); backdrop-filter: blur(10px);';
                        
                        html += `
                            <tr style="${rowStyle}">
                                <td style="padding: 15px; font-weight: 600;">${medal} ${index + 1}</td>
                                <td style="padding: 15px;"><strong>${item.option}</strong></td>
                                <td style="padding: 15px;">
                                    <span class="badge" style="${firstPlacesStyle} padding: 6px 12px; border-radius: 20px; font-size: 12px; font-weight: 600;">
                                        ${item.firstPlaces}
                                    </span>
                                </td>
                                <td style="padding: 15px;">
                                    <span class="badge" style="${avgRankStyle} padding: 6px 12px; border-radius: 20px; font-size: 12px; font-weight: 600;">
                                        ${item.averageRank === 999 ? 'N/A' : item.averageRank}
                                    </span>
                                </td>
                            </tr>
                        `;
                    });
                    
                    tableBody.innerHTML = html;
                }
                
                function renderRankingChart(rankingStats) {
                    const ctx = document.getElementById('rankingChart');
                    if (!ctx) return;
                    
                    const options = Object.keys(rankingStats.winnerByVotes);
                    const firstPlaces = options.map(option => rankingStats.winnerByVotes[option]);
                    
                    new Chart(ctx, {
                        type: 'bar',
                        data: {
                            labels: options,
                            datasets: [{
                                label: 'Nombre de votes 1ère place',
                                data: firstPlaces,
                                backgroundColor: 'rgba(13, 148, 136, 0.8)', // Couleur de l'en-tête
                                borderColor: 'rgba(13, 148, 136, 1)',
                                borderWidth: 2,
                                borderRadius: 8,
                                borderSkipped: false,
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: {
                                legend: {
                                    display: false
                                }
                            },
                            scales: {
                                x: {
                                    grid: {
                                        display: false
                                    },
                                    ticks: {
                                        color: '#64748B',
                                        font: {
                                            size: 12,
                                            weight: '500'
                                        }
                                    }
                                },
                                y: {
                                    beginAtZero: true,
                                    grid: {
                                        color: 'rgba(148, 163, 184, 0.1)',
                                        drawBorder: false
                                    },
                                    ticks: {
                                        stepSize: 1,
                                        color: '#64748B',
                                        font: {
                                            size: 12
                                        }
                                    }
                                }
                            },
                            elements: {
                                bar: {
                                    borderRadius: 4
                                }
                            }
                        }
                    });
                }
                
                function renderRankDistributionChart(rankingStats) {
                    const ctx = document.getElementById('rankDistributionChart');
                    if (!ctx) return;
                    
                    const options = Object.keys(rankingStats.rankDistribution);
                    const ranks = Object.keys(rankingStats.rankDistribution[options[0]] || {});
                    
                    const datasets = options.map((option, index) => ({
                        label: option,
                        data: ranks.map(rank => rankingStats.rankDistribution[option][rank] || 0),
                        backgroundColor: `hsla(${index * 60}, 70%, 50%, 0.7)`,
                        borderColor: `hsla(${index * 60}, 70%, 40%, 1)`,
                        borderWidth: 2
                    }));
                    
                    new Chart(ctx, {
                        type: 'bar',
                        data: {
                            labels: ranks.map(rank => `Rang ${rank}`),
                            datasets: datasets
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: {
                                legend: {
                                    display: true,
                                    position: 'top'
                                }
                            },
                            scales: {
                                x: {
                                    stacked: false
                                },
                                y: {
                                    beginAtZero: true,
                                    ticks: {
                                        stepSize: 1
                                    }
                                }
                            }
                        }
                    });
                }

                renderCharts();
                renderRankingCharts();
            });
        })();
    </script>

    <!-- Modal pour afficher les détails du classement -->
    <div class="modal fade" id="rankingModal" tabindex="-1" aria-labelledby="rankingModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="rankingModalLabel">Détails du vote par ordre</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="rankingDetails">
                        <div class="text-center">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Chargement...</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Fonction pour afficher les détails du classement
        async function showRankingDetails(userId, userName, userSurname) {
            const modal = new bootstrap.Modal(document.getElementById('rankingModal'));
            const modalTitle = document.getElementById('rankingModalLabel');
            const rankingDetails = document.getElementById('rankingDetails');
            
            modalTitle.textContent = `Vote de ${userName} ${userSurname}`;
            rankingDetails.innerHTML = `
                <div class="text-center">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Chargement...</span>
                    </div>
                </div>
            `;
            
            modal.show();
            
                try {
                const response = await fetch(`/api/event/<%= eventId %>/vote_responses/${userId}/<%= form.id %>`);
                const data = await response.json();
                
                if (data.success && data.responses) {
                    let html = '<div class="ranking-display">';
                    
                    // Parcourir les réponses pour trouver les classements
                    Object.keys(data.responses).forEach(fieldId => {
                        const fieldResponse = data.responses[fieldId];
                        
                        if (typeof fieldResponse === 'object' && fieldResponse !== null) {
                            // C'est probablement un classement
                            html += '<h6 class="mb-3">Classement :</h6>';
                            html += '<div class="list-group">';
                            
                            // Convertir en array et trier par rang
                            const rankings = Object.entries(fieldResponse)
                                .map(([option, rank]) => ({ option, rank: parseInt(rank) }))
                                .sort((a, b) => a.rank - b.rank);
                            
                            rankings.forEach(({ option, rank }) => {
                                const badgeClass = rank === 1 ? 'bg-success' : rank === 2 ? 'bg-warning' : rank === 3 ? 'bg-info' : 'bg-secondary';
                                html += `
                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                        <span>${option}</span>
                                        <span class="badge ${badgeClass} rounded-pill">${rank}</span>
                                    </div>
                                `;
                            });
                            
                            html += '</div>';
                        } else {
                            // Réponse simple
                            html += `<p><strong>Réponse :</strong> ${fieldResponse}</p>`;
                        }
                    });
                    
                    html += '</div>';
                    rankingDetails.innerHTML = html;
                } else {
                    rankingDetails.innerHTML = '<div class="alert alert-warning">Aucune réponse trouvée pour cet utilisateur.</div>';
                }
            } catch (error) {
                console.error('Erreur lors du chargement des détails:', error);
                rankingDetails.innerHTML = '<div class="alert alert-danger">Erreur lors du chargement des détails.</div>';
            }
        }
    </script>
