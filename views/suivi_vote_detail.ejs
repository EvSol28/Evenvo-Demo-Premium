                                totalStatsElement.textContent = "Aucune donn√©e."; 
                                totalChartElement.style.display = 'none'; 
                            }
                        } else { 
                            totalStatsElement.textContent = "Donn√©es indisponibles."; 
                            totalChartElement.style.display = 'none'; 
                        }
                    }

                    // Graphiques par r√¥le
                    console.log('üî• KIRO DEBUG JS - chartData:', chartData);
                    if (chartData && chartData.length > 0) {
                        console.log('üî• KIRO DEBUG JS - Nombre de r√¥les:', chartData.length);
