    <!-- Contenu Principal -->
    <div class="main-content">
        <div class="page-header">
            <h1>Suivi des Votes</h1>
            <% if (typeof eventName !== 'undefined' && eventName) { %>
            <p class="subtitle-gray">Évènement : <%= eventName %></p>
