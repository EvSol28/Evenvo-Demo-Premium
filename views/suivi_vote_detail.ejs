        }
        .content-block:hover { border-color: var(--card-hover-border); box-shadow: var(--card-hover-shadow); }
        .content-block h2 { 
            font-size: 1.3rem; 
            font-weight: 600; 
            color: var(--dark); 
            margin-bottom: 1.5rem; 
            padding-bottom: 0.75rem; 
            border-bottom: 1px solid var(--light-gray); 
        }
        .content-block h3 { 
            font-size: 1.1rem; 
            font-weight: 600; 
            color: var(--primary-dark); 
            margin-top: 1rem; 
            margin-bottom: 1rem; 
            text-align: center; 
        }

        /* --- Conteneur pour les contrôles --- */
        .controls-container { 
            display: flex; 
            justify-content: flex-end; 
            align-items: center; 
            width: 100%; 
            margin-bottom: 1rem; 
            gap: 1rem; 
            flex-wrap: wrap; 
        }
        .search-container { flex-grow: 0; flex-shrink: 0; }
        .search-container input { 
