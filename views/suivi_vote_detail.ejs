            border-color: var(--color-oui);
            box-shadow: 0 2px 5px rgba(75, 192, 192, 0.3);
            transform: scale(1.03);
        }
        .badge-choice-1 {
            color: var(--color-non);
            border-color: rgba(247, 70, 74, 0.2);
            background: rgba(247, 70, 74, 0.08);
        }
        .badge-choice-1:hover {
            background: var(--color-non);
            color: white;
            border-color: var(--color-non);
            box-shadow: 0 2px 5px rgba(247, 70, 74, 0.3);
            transform: scale(1.03);
        }
        .badge-choice-2 {
            color: var(--color-abstention);
            border-color: rgba(255, 206, 86, 0.2);
            background: rgba(255, 206, 86, 0.08);
        }
        .badge-choice-2:hover {
            background: var(--color-abstention);
            color: white;
            border-color: var(--color-abstention);
            box-shadow: 0 2px 5px rgba(255, 206, 86, 0.3);
            transform: scale(1.03);
        }
        .badge-choice-3 {
            color: #9966FF;
            border-color: rgba(153, 102, 255, 0.2);
            background: rgba(153, 102, 255, 0.08);
        }
        .badge-choice-3:hover {
            background: #9966FF;
            color: white;
            border-color: #9966FF;
            box-shadow: 0 2px 5px rgba(153, 102, 255, 0.3);
            transform: scale(1.03);
        }
        .badge-choice-4 {
            color: #FF9F40;
            border-color: rgba(255, 159, 64, 0.2);
            background: rgba(255, 159, 64, 0.08);
        }
        .badge-choice-4:hover {
            background: #FF9F40;
            color: white;
            border-color: #FF9F40;
            box-shadow: 0 2px 5px rgba(255, 159, 64, 0.3);
            transform: scale(1.03);
        }
        .badge-choice-5 {
            color: #36A2EB;
            border-color: rgba(54, 162, 235, 0.2);
            background: rgba(54, 162, 235, 0.08);
        }
        .badge-choice-5:hover {
            background: #36A2EB;
            color: white;
            border-color: #36A2EB;
            box-shadow: 0 2px 5px rgba(54, 162, 235, 0.3);
            transform: scale(1.03);
        }

        /* --- Nombre total d'utilisateurs centré --- */
        .users-count-container {
            text-align: center;
            margin-top: 1rem;
            margin-bottom: 1rem;
        }
        #voteUsersCount {
            display: inline-block;
        }

        /* --- Styles pour les tableaux avec en-têtes glass --- */
        .table thead th {
            background: rgba(13, 148, 136, 0.15);
            color: #0D9488;
            border-color: rgba(13, 148, 136, 0.3);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            font-weight: 600;
            border-bottom: 2px solid rgba(13, 148, 136, 0.3);
            box-shadow: 0 2px 8px rgba(13, 148, 136, 0.1);
        }
        
        .table-striped tbody tr:nth-of-type(odd) {
            background-color: rgba(13, 148, 136, 0.02);
        }
        
        .table-warning {
            background-color: rgba(255, 193, 7, 0.1) !important;
        }

        /* --- Styles pour les badges avec effet glass --- */
        .badge {
            border-radius: 20px;
            padding: 0.5rem 1rem;
            font-weight: 600;
            font-size: 0.85rem;
            border: 1px solid transparent;
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            transition: all 0.3s ease;
        }
        
        .badge-success {
            background: rgba(13, 148, 136, 0.15);
