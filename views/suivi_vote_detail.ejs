                            console.log('üî• KIRO DEBUG JS - Traitement du r√¥le:', data.role, data);
                            const roleIdSuffix = data.role.toLowerCase().replace(/\s+/g, '-');
                            const chartId = `${roleIdSuffix}Chart`;
                            const statsId = `${roleIdSuffix}Stats`;
                            console.log('üî• KIRO DEBUG JS - IDs g√©n√©r√©s:', chartId, statsId);
                            const chartElement = document.getElementById(chartId);
                            const statsElement = document.getElementById(statsId);
                            console.log('üî• KIRO DEBUG JS - √âl√©ments trouv√©s:', !!chartElement, !!statsElement);

                            if (chartElement && statsElement) {
                                destroyChart(chartId);
                                const total = data.total || 0;
                                console.log('üî• KIRO DEBUG JS - Total pour ce r√¥le:', total);

                                if (total > 0) {
                                    // Pr√©parer les donn√©es pour ce r√¥le
                                    const roleLabels = [];
                                    const roleValues = [];
                                    const roleBackgroundColors = [];
                                    const roleBorderColors = [];

                                    console.log('üî• KIRO DEBUG JS - Choix du formulaire:', formChoices);
                                    console.log('üî• KIRO DEBUG JS - Choix pour ce r√¥le:', data.choices);

                                    // Ajouter les choix du formulaire pour ce r√¥le
                                    formChoices.forEach((choice, index) => {
                                        const count = data.choices[choice] || 0;
                                        console.log(`üî• KIRO DEBUG JS - Choix "${choice}": ${count}`);
                                        if (count > 0) {
                                            roleLabels.push(choice);
                                            roleValues.push(count);
                                            const colorIndex = index % colors.length;
                                            roleBackgroundColors.push(colors[colorIndex].bg);
                                            roleBorderColors.push(colors[colorIndex].border);
                                        }
                                    });

                                    // Ajouter "Non vot√©" s'il y en a
                                    if (data.notVoted > 0) {
                                        console.log(`üî• KIRO DEBUG JS - Non vot√©: ${data.notVoted}`);
                                        roleLabels.push('Non vot√©');
                                        roleValues.push(data.notVoted);
                                        roleBackgroundColors.push('rgba(108, 117, 125, 0.08)');
                                        roleBorderColors.push('rgba(108, 117, 125, 0.5)');
                                    }

                                    console.log('üî• KIRO DEBUG JS - Donn√©es finales pour graphique:', roleLabels, roleValues);

                                    if (roleValues.length > 0) {
                                        chartElement.style.display = 'block';
                                        charts[chartId] = new Chart(chartElement, {
                                            type: 'doughnut',
                                            data: { 
                                                labels: roleLabels, 
                                                datasets: [{ 
                                                    data: roleValues, 
                                                    backgroundColor: roleBackgroundColors,
                                                    borderColor: roleBorderColors,
                                                    borderWidth: 1.5,
                                                    hoverBackgroundColor: roleBackgroundColors.map((_, i) => colors[i % colors.length].hover),
                                                    hoverBorderColor: roleBorderColors,
                                                    borderRadius: 5,
                                                }] 
                                            },
                                            options: { 
                                                responsive: true, 
                                                maintainAspectRatio: false,
                                                cutout: '70%',
                                                plugins: { 
                                                    legend: { 
                                                        display: true, 
                                                        position: 'bottom', 
                                                        labels: { 
                                                            padding: 15, 
                                                            font: { size: 12 }, 
                                                            color: 'var(--gray)',
                                                            boxWidth: 20,
                                                            usePointStyle: true
                                                        } 
                                                    }, 
                                                    tooltip: { 
                                                        enabled: true, 
                                                        callbacks: { 
                                                            label: function(context) { 
                                                                let l = context.label || ''; 
                                                                if (l) l += ': '; 
                                                                if (context.parsed !== null) { 
                                                                    const t = context.dataset.data.reduce((a, b) => a + b, 0); 
                                                                    const p = t > 0 ? Math.round((context.parsed / t) * 100) : 0; 
                                                                    l += `${context.parsed} (${p}%)`; 
                                                                } 
                                                                return l; 
                                                            } 
                                                        } 
                                                    } 
                                                },
                                                animation: {
                                                    animateRotate: true,
                                                    animateScale: true
                                                }
                                            }
                                        });

                                        // Afficher les statistiques pour ce r√¥le
                                        let roleStatsHtml = '';
                                        formChoices.forEach((choice, index) => {
                                            const count = data.choices[choice] || 0;
                                            if (count > 0) {
                                                const percentage = Math.round((count / total) * 100);
                                                const colorClass = `badge-choice-${index % 6}`;
                                                roleStatsHtml += `<span class="badge ${colorClass}">${choice}: ${count} (${percentage}%)</span>`;
                                            }
                                        });
                                        if (data.notVoted > 0) {
                                            const percentage = Math.round((data.notVoted / total) * 100);
                                            roleStatsHtml += `<span class="badge badge-secondary">Non vot√©: ${data.notVoted} (${percentage}%)</span>`;
                                        }
                                        roleStatsHtml += `<span class="badge badge-total">Total: ${total}</span>`;
                                        console.log('üî• KIRO DEBUG JS - HTML des stats:', roleStatsHtml);
                                        statsElement.innerHTML = roleStatsHtml;
                                    } else { 
                                        console.log('üî• KIRO DEBUG JS - Aucune donn√©e √† afficher');
                                        statsElement.textContent = "Aucune donn√©e."; 
                                        chartElement.style.display = 'none'; 
                                    }
                                } else { 
                                    console.log('üî• KIRO DEBUG JS - Total = 0');
                                    statsElement.textContent = "Aucune donn√©e."; 
                                    chartElement.style.display = 'none'; 
                                }
                            } else {
                                console.log('üî• KIRO DEBUG JS - √âl√©ments HTML non trouv√©s pour:', chartId, statsId);
                            }
                        });
                    } else {
                        console.log('üî• KIRO DEBUG JS - Pas de chartData ou vide');
                    }
                }

                renderCharts();
            });
        })();
    </script>
