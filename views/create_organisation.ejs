    <div class="main-content">
        <div class="page-header">
            <h1>Gestion des Organisations</h1>
        </div>

        <div class="create-btn-container">
            <button id="createOrgBtn" class="btn btn-custom-action"><i class="fas fa-plus"></i> Créer une organisation</button>
        </div>

        <div class="content-block" id="orgFormContainer">
            <h2>Créer une nouvelle organisation</h2>
            <form id="orgForm">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label for="orgName" class="form-label">Nom de l'organisation</label>
                        <input type="text" class="form-control" id="orgName" name="orgName" required>
                    </div>
                    <div class="col-md-6">
                        <label for="orgCode" class="form-label">Code de l'organisation</label>
                        <input type="text" class="form-control" id="orgCode" name="orgCode" required>
                    </div>
                </div>
                <div class="btn-container">
                    <button type="submit" class="btn btn-custom-action"><i class="fas fa-check"></i> Valider</button>
                    <button type="button" id="cancelBtn" class="btn btn-custom-secondary"><i class="fas fa-times"></i> Annuler</button>
                </div>
            </form>
        </div>

        <div class="content-block">
            <h2>Liste des organisations</h2>
            <div class="controls-container">
                <button id="removeSelectedBtn" class="btn btn-custom-danger" disabled><i class="fas fa-trash-alt"></i> Supprimer la sélection</button>
                <div class="search-container">
                    <input type="text" id="searchInput" class="form-control" placeholder="Rechercher par nom ou code...">
                </div>
            </div>
            <div class="table-responsive-scrollable">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th class="text-center"><input class="form-check-input" type="checkbox" id="selectAllOrgCheckbox"></th>
                            <th>ID</th>
                            <th>Nom</th>
                            <th>Code</th>
                            <th>Date de création</th>
                            <th class="text-end">Nombre d'utilisateurs</th>
                        </tr>
                    </thead>
                    <tbody id="orgTableBody">
                        <% if (organisations && organisations.length > 0) { %>
                            <% organisations.forEach(org => { %>
                                <tr class="org-row" data-id="<%= org.id %>">
                                    <td class="text-center"><input class="form-check-input org-checkbox" type="checkbox" data-id="<%= org.id %>"></td>
                                    <td><%= org.id %></td>
                                    <td><span class="org-name"><%= org.name %></span></td>
                                    <td><%= org.code %></td>
                                    <td><%= new Date(org.createdAt).toLocaleDateString('fr-FR') %></td>
                                    <td class="text-end"><%= org.userCount || 0 %></td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr><td colspan="6" class="text-center text-muted py-4">Aucune organisation trouvée.</td></tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
            <div class="counts-container">
                <span id="totalOrgsCountTile" class="form-control">
                    Nombre total d'organisations : <span id="totalOrgsCountDynamic"><%- organisations ? organisations.length : 0 %></span>
                </span>
            </div>
        </div>

        <div class="content-block" id="usersTableContainer">
            <h3 id="usersTableTitle">Utilisateurs rattachés à l'organisation sélectionnée</h3>
            <div class="users-controls-container">
                <div class="users-btn-group">
                    <button id="addUsersBtn" class="btn btn-custom-action"><i class="fas fa-user-plus"></i> Ajouter</button>
                    <button id="removeUsersBtn" class="btn btn-custom-danger" disabled><i class="fas fa-user-minus"></i> Retirer</button>
                    <button id="deleteUsersBtn" class="btn btn-custom-danger" disabled><i class="fas fa-trash-alt"></i> Supprimer</button>
                </div>
                <div class="search-container">
                    <input type="text" id="userSearchInput" class="form-control" placeholder="Rechercher par nom ou email...">
                </div>
            </div>
            <div class="table-responsive-scrollable">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th class="text-center"><input class="form-check-input" type="checkbox" id="selectAllUserCheckbox"></th>
                            <th>ID</th>
                            <th>Nom</th>
                            <th>Prénom</th>
                            <th>Email</th>
                        </tr>
                    </thead>
                    <tbody id="userTableBody"></tbody>
                </table>
            </div>
            <div class="counts-container">
                <span id="totalUsersCountTile" class="form-control">
                    Nombre total d'utilisateurs : <span id="totalUsersCountDynamic">0</span>
                </span>
            </div>
        </div>

        <div class="modal fade" id="addUserModal" tabindex="-1" aria-labelledby="addUserModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="addUserModalLabel">Ajouter des utilisateurs à l'organisation</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead>
                                    <tr>
                                        <th class="text-center"><input class="form-check-input" type="checkbox" id="selectAllModalCheckbox"></th>
                                        <th>ID</th>
                                        <th>Nom</th>
                                        <th>Prénom</th>
                                        <th>Email</th>
                                    </tr>
                                </thead>
                                <tbody id="modalUserTableBody"></tbody>
                            </table>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-custom-secondary" data-bs-dismiss="modal"><i class="fas fa-times me-2"></i> Annuler</button>
                        <button type="button" class="btn btn-custom-action" id="saveUsersBtn"><i class="fas fa-save me-2"></i> Enregistrer</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

