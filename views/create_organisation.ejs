    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const createOrgBtn = document.getElementById('createOrgBtn');
            const orgFormContainer = document.getElementById('orgFormContainer');
            const cancelBtn = document.getElementById('cancelBtn');
            const orgForm = document.getElementById('orgForm');
            const orgTableBody = document.getElementById('orgTableBody');
            const userTableBody = document.getElementById('userTableBody');
            const usersTableContainer = document.getElementById('usersTableContainer');
            const totalOrgsCountDynamic = document.getElementById('totalOrgsCountDynamic');
            const totalUsersCountDynamic = document.getElementById('totalUsersCountDynamic');
            const selectAllOrgCheckbox = document.getElementById('selectAllOrgCheckbox');
            const selectAllUserCheckbox = document.getElementById('selectAllUserCheckbox');
            const selectAllModalCheckbox = document.getElementById('selectAllModalCheckbox');
            const removeSelectedBtn = document.getElementById('removeSelectedBtn');
            const addUsersBtn = document.getElementById('addUsersBtn');
            const removeUsersBtn = document.getElementById('removeUsersBtn');
            const deleteUsersBtn = document.getElementById('deleteUsersBtn');
            const searchInput = document.getElementById('searchInput');
            const userSearchInput = document.getElementById('userSearchInput');
            let selectedOrgId = null;

            async function fetchUserInfo() {
                try {
                    const response = await fetch('/api/userinfo');
                    const user = await response.json();
                    document.getElementById('userFullName').textContent = `${user.name} ${user.surname}`;
                    document.getElementById('userEmail').textContent = user.email;
                } catch (error) {
                    console.error('Erreur chargement info utilisateur:', error);
                }
            }
            fetchUserInfo();

            createOrgBtn.addEventListener('click', () => {
                orgFormContainer.style.display = 'block';
                window.scrollTo({ top: orgFormContainer.offsetTop - 100, behavior: 'smooth' });
            });

            cancelBtn.addEventListener('click', () => {
                orgFormContainer.style.display = 'none';
                orgForm.reset();
            });

            orgForm.addEventListener('submit', async (e) => {
                e.preventDefault();
                const orgData = {
                    name: document.getElementById('orgName').value,
                    code: document.getElementById('orgCode').value
                };

                try {
                    const response = await fetch('/create_organisation', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(orgData)
                    });
                    const result = await response.json();

                    if (!response.ok) throw new Error(result.error);

                    Swal.fire({
                        icon: 'success',
                        title: 'Succès',
                        text: 'Organisation créée avec succès'
                    }).then(() => {
                        const noOrgRow = orgTableBody.querySelector('tr td[colspan="6"]');
                        if (noOrgRow) noOrgRow.parentElement.remove();

                        const newRow = document.createElement('tr');
                        newRow.classList.add('org-row');
                        newRow.setAttribute('data-id', result.id);
                        newRow.innerHTML = `
                            <td class="text-center"><input class="form-check-input org-checkbox" type="checkbox" data-id="${result.id}"></td>
                            <td>${result.id}</td>
                            <td><span class="org-name">${orgData.name}</span></td>
                            <td>${orgData.code}</td>
                            <td>${new Date().toLocaleDateString('fr-FR')}</td>
                            <td class="text-end">0</td>
                        `;
                        orgTableBody.appendChild(newRow);
                        orgForm.reset();
                        orgFormContainer.style.display = 'none';
                        updateTotalOrgs();
                    });
                } catch (error) {
                    Swal.fire({ icon: 'error', title: 'Erreur', text: error.message });
                }
            });

            selectAllOrgCheckbox.addEventListener('change', () => {
                document.querySelectorAll('.org-checkbox').forEach(cb => cb.checked = selectAllOrgCheckbox.checked);
                updateRemoveButtonState();
            });

            selectAllUserCheckbox.addEventListener('change', () => {
                document.querySelectorAll('.user-checkbox').forEach(cb => cb.checked = selectAllUserCheckbox.checked);
                updateUserButtonsState();
            });

            selectAllModalCheckbox.addEventListener('change', () => {
                document.querySelectorAll('.modal-user-checkbox').forEach(cb => cb.checked = selectAllModalCheckbox.checked);
            });

            removeSelectedBtn.addEventListener('click', async () => {
                const selectedIds = Array.from(document.querySelectorAll('.org-checkbox:checked')).map(cb => cb.getAttribute('data-id'));
                if (selectedIds.length === 0) {
                    Swal.fire({ icon: 'warning', title: 'Attention', text: 'Aucune organisation sélectionnée.' });
                    return;
                }

                Swal.fire({
                    title: 'Confirmer la suppression',
                    text: 'Voulez-vous vraiment supprimer ces organisations ? Les utilisateurs rattachés ne seront pas supprimés.',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Oui',
                    cancelButtonText: 'Non'
                }).then(async (result) => {
                    if (result.isConfirmed) {
                        try {
                            const response = await fetch('/delete_organisations', {
                                method: 'POST',
                                headers: { 'Content-Type': 'application/json' },
                                body: JSON.stringify({ orgIds: selectedIds })
                            });
                            if (!response.ok) throw new Error('Erreur lors de la suppression');
                            selectedIds.forEach(id => {
                                const row = document.querySelector(`.org-row[data-id="${id}"]`);
                                if (row) row.remove();
                            });
                            if (orgTableBody.children.length === 0) {
                                orgTableBody.innerHTML = '<tr><td colspan="6" class="text-center text-muted py-4">Aucune organisation trouvée.</td></tr>';
                            }
                            Swal.fire({ icon: 'success', title: 'Succès', text: 'Organisations supprimées.' });
                            updateTotalOrgs();
                            usersTableContainer.style.display = 'none';
                            selectedOrgId = null;
                        } catch (error) {
                            Swal.fire({ icon: 'error', title: 'Erreur', text: error.message });
                        }
                    }
                });
            });

            orgTableBody.addEventListener('click', async (e) => {
                const row = e.target.closest('.org-row');
                if (row && !e.target.classList.contains('org-checkbox')) {
                    selectedOrgId = row.getAttribute('data-id');
                    usersTableContainer.style.display = 'block';
                    const orgName = row.querySelector('.org-name').textContent;
                    document.getElementById('usersTableTitle').textContent = `Utilisateurs rattachés à "${orgName}"`;
                    window.scrollTo({ top: usersTableContainer.offsetTop - 100, behavior: 'smooth' });
                    await loadUsers(selectedOrgId);
                }
            });

            async function loadUsers(orgId) {
                try {
                    const response = await fetch(`/api/getUsersByOrg/${orgId}`);
                    const users = await response.json();
                    userTableBody.innerHTML = '';
                    if (users.length > 0) {
                        users.forEach(user => {
                            const row = document.createElement('tr');
                            row.innerHTML = `
                                <td class="text-center"><input class="form-check-input user-checkbox" type="checkbox" data-id="${user.id}"></td>
                                <td>${user.id}</td>
                                <td>${user.name}</td>
                                <td>${user.surname}</td>
                                <td>${user.email || '-'}</td>
                            `;
                            userTableBody.appendChild(row);
                        });
                    } else {
                        userTableBody.innerHTML = '<tr><td colspan="5" class="text-center text-muted py-4">Aucun utilisateur rattaché.</td></tr>';
                    }
                    updateTotalUsers(); // Met à jour le compteur après le chargement
                    updateUserButtonsState();
                } catch (error) {
                    console.error('Erreur lors du chargement des utilisateurs :', error);
                    userTableBody.innerHTML = '<tr><td colspan="5" class="text-center text-danger py-4">Erreur chargement utilisateurs.</td></tr>';
                    updateTotalUsers(); // Met à jour même en cas d'erreur
                }
            }

            addUsersBtn.addEventListener('click', async () => {
                const modalUserTableBody = document.getElementById('modalUserTableBody');
                try {
                    const response = await fetch('/api/getUsers');
                    const allUsers = await response.json();
                    modalUserTableBody.innerHTML = '';
                    allUsers.forEach(user => {
                        const row = document.createElement('tr');
                        row.innerHTML = `
                            <td class="text-center"><input class="form-check-input modal-user-checkbox" type="checkbox" data-id="${user.id}"></td>
                            <td>${user.id}</td>
                            <td>${user.name}</td>
                            <td>${user.surname}</td>
                            <td>${user.email || '-'}</td>
                        `;
                        modalUserTableBody.appendChild(row);
                    });
                    new bootstrap.Modal(document.getElementById('addUserModal')).show();
                } catch (error) {
                    console.error('Erreur lors du chargement des utilisateurs :', error);
                }
            });

            document.getElementById('saveUsersBtn').addEventListener('click', async () => {
                const selectedUserIds = Array.from(document.querySelectorAll('.modal-user-checkbox:checked')).map(cb => cb.getAttribute('data-id'));
                if (selectedUserIds.length === 0) {
                    Swal.fire({ icon: 'warning', title: 'Attention', text: 'Aucun utilisateur sélectionné.' });
                    return;
                }

                try {
                    const response = await fetch('/add_users_to_org', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ orgId: selectedOrgId, userIds: selectedUserIds })
                    });
                    const result = await response.json();
                    if (!response.ok) throw new Error(result.error);

                    Swal.fire({ icon: 'success', title: 'Succès', text: 'Utilisateurs ajoutés avec succès.' });
                    bootstrap.Modal.getInstance(document.getElementById('addUserModal')).hide();

                    const updatedOrgCounts = result.updatedOrgCounts || {};
                    for (const [orgId, newCount] of Object.entries(updatedOrgCounts)) {
                        const row = document.querySelector(`.org-row[data-id="${orgId}"]`);
                        if (row) row.cells[5].textContent = newCount;
                    }
                    await loadUsers(selectedOrgId);
                } catch (error) {
                    Swal.fire({ icon: 'error', title: 'Erreur', text: error.message });
                }
            });

            removeUsersBtn.addEventListener('click', async () => {
                const selectedUserIds = Array.from(document.querySelectorAll('.user-checkbox:checked')).map(cb => cb.getAttribute('data-id'));
                if (selectedUserIds.length === 0) {
                    Swal.fire({ icon: 'warning', title: 'Attention', text: 'Aucun utilisateur sélectionné.' });
                    return;
                }

                Swal.fire({
                    title: `Retirer ${selectedUserIds.length} utilisateur(s) ?`,
                    text: "Ils ne seront retirés que de cette organisation.",
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonText: 'Oui, retirer!',
                    cancelButtonText: 'Annuler'
                }).then(async (result) => {
                    if (result.isConfirmed) {
                        try {
                            const response = await fetch('/remove_users_from_org', {
                                method: 'POST',
                                headers: { 'Content-Type': 'application/json' },
                                body: JSON.stringify({ orgId: selectedOrgId, userIds: selectedUserIds })
                            });
                            const result = await response.json();
                            if (!response.ok) throw new Error(result.error);
                            Swal.fire({ icon: 'success', title: 'Succès', text: 'Utilisateurs retirés.' });
                            const updatedOrgCounts = result.updatedOrgCounts || {};
                            for (const [orgId, newCount] of Object.entries(updatedOrgCounts)) {
                                const row = document.querySelector(`.org-row[data-id="${orgId}"]`);
                                if (row) row.cells[5].textContent = newCount;
                            }
                            await loadUsers(selectedOrgId);
                        } catch (error) {
                            Swal.fire({ icon: 'error', title: 'Erreur', text: error.message });
                        }
                    }
                });
            });

            deleteUsersBtn.addEventListener('click', async () => {
                const selectedUserIds = Array.from(document.querySelectorAll('.user-checkbox:checked')).map(cb => cb.getAttribute('data-id'));
                if (selectedUserIds.length === 0) {
                    Swal.fire({ icon: 'warning', title: 'Attention', text: 'Aucun utilisateur sélectionné.' });
                    return;
                }

                try {
                    const response = await fetch(`/api/checkUserOrgs/${selectedOrgId}`, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ userIds: selectedUserIds })
                    });
                    const userOrgs = await response.json();

                    const usersToDelete = userOrgs.filter(u => u.orgs.length === 1 && u.orgs[0] === selectedOrgId).map(u => u.userId);
                    const usersWithOtherOrgs = userOrgs.filter(u => u.orgs.length > 1);

                    if (usersWithOtherOrgs.length > 0) {
                        const orgIds = [...new Set(usersWithOtherOrgs.flatMap(u => u.orgs.filter(o => o !== selectedOrgId)))];
                        const orgResponse = await fetch('/api/getOrgNames', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({ orgIds })
                        });
                        const orgNamesData = await orgResponse.json();
                        const orgNames = usersWithOtherOrgs.map(u => 
                            u.orgs.filter(o => o !== selectedOrgId).map(id => orgNamesData[id] || id).join(', ')
                        ).join('; ');

                        Swal.fire({
                            title: 'Attention',
                            text: `Certains utilisateurs sont rattachés à d'autres organisations (${orgNames}). Voulez-vous supprimer uniquement ceux qui ne sont rattachés qu'à cette organisation ?`,
                            icon: 'info',
                            confirmButtonText: 'Continuer',
                            showCancelButton: true,
                            cancelButtonText: 'Annuler'
                        }).then(async (result) => {
                            if (result.isConfirmed && usersToDelete.length > 0) {
                                await deleteUsersFromCreateOrg(usersToDelete);
                            } else if (usersToDelete.length === 0) {
                                Swal.fire({ icon: 'info', title: 'Aucun utilisateur à supprimer', text: 'Tous les utilisateurs sélectionnés sont rattachés à d’autres organisations.' });
                            }
                        });
                    } else if (usersToDelete.length > 0) {
                        Swal.fire({
                            title: 'Confirmer la suppression',
                            text: 'Voulez-vous vraiment supprimer ces utilisateurs ?',
                            icon: 'warning',
                            showCancelButton: true,
                            confirmButtonText: 'Oui',
                            cancelButtonText: 'Non'
                        }).then(async (result) => {
                            if (result.isConfirmed) {
                                await deleteUsersFromCreateOrg(usersToDelete);
                            }
                        });
                    }
                } catch (error) {
                    console.error('Erreur lors de la vérification des utilisateurs :', error);
                    Swal.fire({ icon: 'error', title: 'Erreur', text: 'Une erreur est survenue.' });
                }
            });

            async function deleteUsersFromCreateOrg(userIds) {
                try {
                    const response = await fetch('/delete_users_from_create_org', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ orgId: selectedOrgId, userIds })
                    });
                    const result = await response.json();
                    if (!response.ok) throw new Error(result.error);
                    Swal.fire({ icon: 'success', title: 'Succès', text: result.message });
                    const updatedOrgCounts = result.updatedOrgCounts || {};
                    for (const [orgId, newCount] of Object.entries(updatedOrgCounts)) {
                        const row = document.querySelector(`.org-row[data-id="${orgId}"]`);
                        if (row) row.cells[5].textContent = newCount;
                    }
                    await loadUsers(selectedOrgId);
                } catch (error) {
                    Swal.fire({ icon: 'error', title: 'Erreur', text: error.message });
                }
            }

            searchInput.addEventListener('input', () => {
                const filter = searchInput.value.toLowerCase();
                document.querySelectorAll('.org-row').forEach(row => {
                    const name = row.cells[2].textContent.toLowerCase();
                    const code = row.cells[3].textContent.toLowerCase();
                    row.style.display = (name.includes(filter) || code.includes(filter)) ? '' : 'none';
                });
                updateTotalOrgs();
            });

            userSearchInput.addEventListener('input', () => {
                const filter = userSearchInput.value.toLowerCase();
                document.querySelectorAll('#userTableBody tr').forEach(row => {
                    const name = row.cells[2]?.textContent.toLowerCase() || '';
                    const email = row.cells[4]?.textContent.toLowerCase() || '';
                    row.style.display = (name.includes(filter) || email.includes(filter)) ? '' : 'none';
                });
                updateTotalUsers();
            });

            function updateTotalOrgs() {
                const visibleRows = Array.from(orgTableBody.querySelectorAll('.org-row')).filter(row => row.style.display !== 'none');
                totalOrgsCountDynamic.textContent = visibleRows.length;
            }

            function updateTotalUsers() {
                const visibleRows = Array.from(userTableBody.querySelectorAll('tr'))
                    .filter(row => row.style.display !== 'none' && row.querySelectorAll('td').length > 1); // Exclut les lignes avec un seul <td>
                totalUsersCountDynamic.textContent = visibleRows.length;
            }

            function updateRemoveButtonState() {
                const checked = document.querySelectorAll('.org-checkbox:checked').length > 0;
                removeSelectedBtn.disabled = !checked;
            }

            function updateUserButtonsState() {
                const checked = document.querySelectorAll('.user-checkbox:checked').length > 0;
                removeUsersBtn.disabled = !checked;
                deleteUsersBtn.disabled = !checked;
            }

            orgTableBody.addEventListener('change', (e) => {
                if (e.target.classList.contains('org-checkbox')) updateRemoveButtonState();
            });

            userTableBody.addEventListener('change', (e) => {
                if (e.target.classList.contains('user-checkbox')) updateUserButtonsState();
            });

            updateRemoveButtonState();
            updateUserButtonsState();
        });
    </script>
</body>
