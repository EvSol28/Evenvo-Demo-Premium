                            <i class="fas fa-edit"></i>
                        </button>
                        <button class="btn btn-sm <%= form.isActive ? 'btn-outline-warning' : 'btn-outline-success' %> me-2" 
                                onclick="toggleForm('<%= form.id %>', <%= !form.isActive %>)">
                            <i class="fas fa-<%= form.isActive ? 'pause' : 'play' %>"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-danger" onclick="deleteForm('<%= form.id %>')">
