    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>
    
    <script>
        const eventId = '<%= eventId %>';
        let formFields = [];
        let fieldCounter = 0;

        // Initialize drag and drop
        document.addEventListener('DOMContentLoaded', function() {
            initializeDragAndDrop();
            fetchUserInfo();
        });

        async function fetchUserInfo() {
            try {
                const response = await fetch('/get_user_info');
                if (!response.ok) throw new Error(`Erreur HTTP: ${response.status}`);
                const user = await response.json();
                const fullName = `${user.name || ''} ${user.surname || ''}`.trim();
                document.getElementById('userFullName').textContent = fullName || 'Utilisateur';
                document.getElementById('userEmail').textContent = user.email || 'Email non disponible';
            } catch (error) {
                console.error('Erreur fetchUserInfo:', error);
                document.getElementById('userFullName').textContent = 'Erreur';
                document.getElementById('userEmail').textContent = 'Indisponible';
            }
        }

        function initializeDragAndDrop() {
            const dropZone = document.getElementById('formDropZone');
            const formElements = document.querySelectorAll('.form-element');

            // Make drop zone sortable
            new Sortable(dropZone, {
                animation: 150,
                ghostClass: 'sortable-ghost',
                onEnd: function(evt) {
                    updateFieldOrder();
                }
            });

            // Add click handlers for form elements
            formElements.forEach(element => {
                element.addEventListener('click', function() {
                    const type = this.getAttribute('data-type');
                    addFormField(type);
                });

                // Drag and drop
                element.addEventListener('dragstart', function(e) {
                    e.dataTransfer.setData('text/plain', this.getAttribute('data-type'));
                });
            });

            // Drop zone events
            dropZone.addEventListener('dragover', function(e) {
                e.preventDefault();
                this.classList.add('drag-over');
            });

            dropZone.addEventListener('dragleave', function(e) {
                this.classList.remove('drag-over');
            });

            dropZone.addEventListener('drop', function(e) {
                e.preventDefault();
                this.classList.remove('drag-over');
                const fieldType = e.dataTransfer.getData('text/plain');
                addFormField(fieldType);
            });

            // Save button
            document.getElementById('saveFormBtn').addEventListener('click', saveForm);
            
            // Preview button
            document.getElementById('previewBtn').addEventListener('click', previewForm);
        }

        function addFormField(type) {
            fieldCounter++;
            const fieldId = `field_${fieldCounter}`;
            
            const field = {
                id: fieldId,
                type: type,
                label: getDefaultLabel(type),
                required: false,
                options: type === 'radio' || type === 'checkbox' || type === 'select' || type === 'ranking' ? ['Option 1', 'Option 2'] : null
            };

            formFields.push(field);
            renderFormField(field);
            updateDropZoneVisibility();
        }

        function getDefaultLabel(type) {
            const labels = {
                'text': 'Texte court',
                'textarea': 'Texte long',
                'radio': 'Choix unique',
                'checkbox': 'Choix multiple',
                'select': 'Liste déroulante',
                'number': 'Nombre',
                'date': 'Date',
                'rating': 'Évaluation',
                'ranking': 'Vote par ordre',
                'syndical': 'Vote syndical'
            };
            return labels[type] || 'Champ';
        }

        function renderFormField(field) {
            const dropZone = document.getElementById('formDropZone');
            const fieldHtml = createFieldHtml(field);
            
            const fieldElement = document.createElement('div');
            fieldElement.className = 'form-field';
            fieldElement.setAttribute('data-field-id', field.id);
            fieldElement.innerHTML = fieldHtml;
            
            dropZone.appendChild(fieldElement);
        }

        function createFieldHtml(field) {
            let html = `
                <div class="field-controls">
                    <button class="field-control-btn edit" onclick="editField('${field.id}')">
                        <i class="fas fa-edit"></i>
                    </button>
                    <button class="field-control-btn delete" onclick="deleteField('${field.id}')">
                        <i class="fas fa-trash"></i>
                    </button>
                </div>
                <label class="form-label fw-bold">${field.label} ${field.required ? '<span class="text-danger">*</span>' : ''}</label>
            `;

            switch (field.type) {
                case 'text':
                    html += `<input type="text" class="form-control" placeholder="Réponse courte" disabled>`;
                    break;
                case 'textarea':
                    html += `<textarea class="form-control" rows="3" placeholder="Réponse longue" disabled></textarea>`;
                    break;
                case 'radio':
                    field.options.forEach((option, index) => {
                        html += `
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="${field.id}" disabled>
                                <label class="form-check-label">${option}</label>
                            </div>
                        `;
                    });
                    break;
                case 'checkbox':
                    field.options.forEach((option, index) => {
                        html += `
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" disabled>
                                <label class="form-check-label">${option}</label>
                            </div>
                        `;
                    });
                    break;
                case 'select':
                    html += `
                        <select class="form-select" disabled>
                            <option>Choisir une option</option>
                            ${field.options.map(option => `<option>${option}</option>`).join('')}
                        </select>
                    `;
                    break;
                case 'number':
                    html += `<input type="number" class="form-control" placeholder="Nombre" disabled>`;
                    break;
                case 'date':
                    html += `<input type="date" class="form-control" disabled>`;
                    break;
                case 'rating':
                    html += `
                        <div class="d-flex gap-2">
                            ${[1,2,3,4,5].map(i => `<i class="fas fa-star text-warning" style="font-size: 1.5rem;"></i>`).join('')}
                        </div>
                    `;
                    break;
                case 'ranking':
                    html += `
                        <div class="alert alert-info mb-2">
                            <small><i class="fas fa-info-circle"></i> Les utilisateurs classeront les options par ordre de préférence (1, 2, 3...)</small>
                        </div>
                    `;
                    field.options.forEach((option, index) => {
                        html += `
                            <div class="d-flex align-items-center mb-2">
                                <span class="badge bg-primary me-2">${index + 1}</span>
                                <span class="form-control-plaintext">${option}</span>
                            </div>
                        `;
                    });
                    break;
                case 'syndical':
                    html += `
                        <div class="alert alert-warning mb-3">
                            <small><i class="fas fa-balance-scale"></i> Vote syndical : texte descriptif + choix Oui/Non/S'abstenir</small>
                        </div>
                        <textarea class="form-control mb-3" rows="3" placeholder="Description de la proposition..." disabled></textarea>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="${field.id}_syndical" disabled>
                            <label class="form-check-label">Oui</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="${field.id}_syndical" disabled>
                            <label class="form-check-label">Non</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="${field.id}_syndical" disabled>
                            <label class="form-check-label">S'abstenir</label>
                        </div>
                    `;
                    break;
            }

            return html;
        }

        function updateDropZoneVisibility() {
            const dropZone = document.getElementById('formDropZone');
            const emptyMessage = dropZone.querySelector('.drop-zone-empty');
            
            if (formFields.length > 0) {
                if (emptyMessage) emptyMessage.style.display = 'none';
            } else {
                if (emptyMessage) emptyMessage.style.display = 'block';
            }
        }

        function editField(fieldId) {
            const field = formFields.find(f => f.id === fieldId);
            if (!field) return;

            // Create edit modal (simplified for this example)
            Swal.fire({
                title: 'Modifier le champ',
                html: `
                    <div class="text-start">
                        <label class="form-label">Libellé</label>
                        <input type="text" id="editLabel" class="form-control mb-3" value="${field.label}">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="editRequired" ${field.required ? 'checked' : ''}>
                            <label class="form-check-label" for="editRequired">Champ obligatoire</label>
                        </div>
                    </div>
                `,
                showCancelButton: true,
                confirmButtonText: 'Sauvegarder',
                cancelButtonText: 'Annuler',
                preConfirm: () => {
                    const label = document.getElementById('editLabel').value;
                    const required = document.getElementById('editRequired').checked;
                    
                    if (!label.trim()) {
                        Swal.showValidationMessage('Le libellé est requis');
                        return false;
                    }
                    
                    return { label: label.trim(), required };
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    field.label = result.value.label;
                    field.required = result.value.required;
                    
                    // Re-render the field
                    const fieldElement = document.querySelector(`[data-field-id="${fieldId}"]`);
                    fieldElement.innerHTML = createFieldHtml(field);
                }
            });
        }

        function deleteField(fieldId) {
            Swal.fire({
                title: 'Supprimer le champ ?',
                text: 'Cette action est irréversible.',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#ef4444',
                cancelButtonColor: '#6b7280',
                confirmButtonText: 'Supprimer',
                cancelButtonText: 'Annuler'
            }).then((result) => {
                if (result.isConfirmed) {
                    formFields = formFields.filter(f => f.id !== fieldId);
                    document.querySelector(`[data-field-id="${fieldId}"]`).remove();
                    updateDropZoneVisibility();
                }
            });
        }

        function updateFieldOrder() {
            const fieldElements = document.querySelectorAll('.form-field[data-field-id]');
            const newOrder = [];
            
            fieldElements.forEach(element => {
                const fieldId = element.getAttribute('data-field-id');
                const field = formFields.find(f => f.id === fieldId);
                if (field) newOrder.push(field);
            });
            
            formFields = newOrder;
        }

        async function saveForm() {
            const formName = document.getElementById('formName').value.trim();
            const formDescription = document.getElementById('formDescription').value.trim();

            if (!formName) {
                Swal.fire({
                    icon: 'error',
                    title: 'Erreur',
                    text: 'Le nom du formulaire est requis'
                });
                return;
            }

            if (formFields.length === 0) {
                Swal.fire({
                    icon: 'error',
                    title: 'Erreur',
                    text: 'Ajoutez au moins un champ au formulaire'
                });
                return;
            }

            try {
                const response = await fetch(`/event/${eventId}/save_vote_form`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        formName,
                        formDescription,
                        formFields,
                        isActive: false
                    })
                });

                const result = await response.json();

                if (result.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Succès',
                        text: result.message
                    }).then(() => {
                        location.reload();
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Erreur',
                        text: result.message
                    });
                }
            } catch (error) {
                console.error('Erreur:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Erreur',
                    text: 'Erreur lors de la sauvegarde'
                });
            }
        }

        function previewForm() {
            const formName = document.getElementById('formName').value.trim() || 'Aperçu du formulaire';
            const formDescription = document.getElementById('formDescription').value.trim();

            if (formFields.length === 0) {
                Swal.fire({
                    icon: 'info',
                    title: 'Aperçu',
                    text: 'Ajoutez des champs pour voir l\'aperçu'
                });
                return;
            }

            let previewHtml = `<div class="text-start"><h4>${formName}</h4>`;
            if (formDescription) {
                previewHtml += `<p class="text-muted">${formDescription}</p>`;
            }
            previewHtml += '<hr>';

            formFields.forEach(field => {
                previewHtml += `<div class="mb-3">`;
                previewHtml += `<label class="form-label fw-bold">${field.label}${field.required ? ' <span class="text-danger">*</span>' : ''}</label>`;
                
                switch (field.type) {
                    case 'text':
                        previewHtml += `<input type="text" class="form-control" placeholder="Votre réponse">`;
                        break;
                    case 'textarea':
                        previewHtml += `<textarea class="form-control" rows="3" placeholder="Votre réponse"></textarea>`;
                        break;
                    case 'radio':
                        field.options.forEach(option => {
                            previewHtml += `
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="preview_${field.id}">
                                    <label class="form-check-label">${option}</label>
                                </div>
                            `;
                        });
                        break;
                    case 'checkbox':
                        field.options.forEach(option => {
                            previewHtml += `
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox">
                                    <label class="form-check-label">${option}</label>
                                </div>
                            `;
                        });
                        break;
                    case 'select':
                        previewHtml += `
                            <select class="form-select">
                                <option>Choisir une option</option>
                                ${field.options.map(option => `<option>${option}</option>`).join('')}
                            </select>
                        `;
                        break;
                    case 'number':
                        previewHtml += `<input type="number" class="form-control">`;
                        break;
                    case 'date':
                        previewHtml += `<input type="date" class="form-control">`;
                        break;
                    case 'rating':
                        previewHtml += `
                            <div class="d-flex gap-2">
                                ${[1,2,3,4,5].map(i => `<i class="fas fa-star text-warning" style="font-size: 1.5rem; cursor: pointer;"></i>`).join('')}
                            </div>
                        `;
                        break;
                    case 'ranking':
                        previewHtml += `
                            <div class="alert alert-info mb-2">
                                <small>Classez les options par ordre de préférence (glissez-déposez)</small>
                            </div>
                        `;
                        field.options.forEach((option, index) => {
                            previewHtml += `
                                <div class="d-flex align-items-center mb-2 p-2 border rounded" style="cursor: move;">
                                    <i class="fas fa-grip-vertical me-2 text-muted"></i>
                                    <span>${option}</span>
                                </div>
                            `;
                        });
                        break;
                    case 'syndical':
                        previewHtml += `
                            <textarea class="form-control mb-3" rows="3" placeholder="Décrivez votre position..."></textarea>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="preview_${field.id}_syndical">
                                <label class="form-check-label">Oui</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="preview_${field.id}_syndical">
                                <label class="form-check-label">Non</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="preview_${field.id}_syndical">
                                <label class="form-check-label">S'abstenir</label>
                            </div>
                        `;
                        break;
                }
                previewHtml += `</div>`;
            });

            previewHtml += '</div>';

            Swal.fire({
                title: 'Aperçu du formulaire',
                html: previewHtml,
                width: '600px',
                confirmButtonText: 'Fermer'
            });
        }

        // Functions for existing forms
        async function toggleForm(formId, isActive) {
            try {
                const response = await fetch(`/event/${eventId}/toggle_vote_form/${formId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ isActive })
                });

                const result = await response.json();

                if (result.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Succès',
                        text: result.message,
                        timer: 1500,
                        showConfirmButton: false
                    }).then(() => {
                        location.reload();
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Erreur',
                        text: result.message
                    });
                }
            } catch (error) {
                console.error('Erreur:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Erreur',
                    text: 'Erreur lors de la mise à jour'
                });
            }
        }

        async function deleteForm(formId) {
            const result = await Swal.fire({
                title: 'Supprimer le formulaire ?',
                text: 'Cette action est irréversible.',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#ef4444',
                cancelButtonColor: '#6b7280',
                confirmButtonText: 'Supprimer',
                cancelButtonText: 'Annuler'
            });

            if (result.isConfirmed) {
                try {
                    const response = await fetch(`/event/${eventId}/delete_vote_form/${formId}`, {
                        method: 'DELETE'
                    });

                    const result = await response.json();

                    if (result.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Succès',
                            text: result.message,
                            timer: 1500,
                            showConfirmButton: false
                        }).then(() => {
                            location.reload();
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Erreur',
                            text: result.message
                        });
                    }
                } catch (error) {
                    console.error('Erreur:', error);
                    Swal.fire({
                        icon: 'error',
                        title: 'Erreur',
                        text: 'Erreur lors de la suppression'
                    });
                }
            }
        }

        function editForm(formId) {
            // TODO: Implement form editing
            Swal.fire({
                icon: 'info',
                title: 'Fonctionnalité à venir',
                text: 'L\'édition des formulaires sera disponible prochainement'
            });
        }
    </script>
