        <!-- Existing Forms -->
        <% if (typeof voteForms !== 'undefined' && voteForms.length > 0) { %>
        <div class="existing-forms">
            <h3><i class="fas fa-list me-2"></i>Formulaires existants</h3>
            
            <% voteForms.forEach(function(form) { %>
            <div class="form-card">
                <div class="form-card-header">
                    <div>
                        <h4 class="form-card-title"><%= form.name %></h4>
                        <% if (form.description) { %>
                        <p class="form-card-description"><%= form.description %></p>
                        <% } %>
                        <div class="form-status <%= form.isActive ? 'active' : 'inactive' %>">
