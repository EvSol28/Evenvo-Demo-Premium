<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Portail Evenvo | Tableau de Bord</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        /* Styles de base du Code Cible (conservés) */
        :root {
            --primary: #0D9488;
            --primary-light: #5EEAD4;
            --primary-dark: #0F766E;
            --secondary: #22D3EE;
            --accent: #A78BFA;
            --dark: #1E293B;
            --light: #F8FAFC;
            --gray: #64748B;
            --card-bg: rgba(255, 255, 255, 0.85);
            --sans: 'Hellix', 'Arial', sans-serif;
            --stats-pink: #FF69B4;
            --border-color-light: rgba(255, 255, 255, 0.2);
            --border-color-card: rgba(13, 148, 136, 0.15);
            --border-color-card-hover: rgba(13, 148, 136, 0.4);
        }

        body {
            font-family: var(--sans);
            background-color: #F1F5F9;
            color: var(--dark);
            min-height: 100vh;
            margin: 0;
            padding-top: 90px;
        }

        /* --- Navbar Style - Copié depuis le Code Source --- */
        .navbar {
            background: rgba(162, 217, 206, 0.3);
            backdrop-filter: blur(15px);
            -webkit-backdrop-filter: blur(15px);
            padding: 0.4rem 1rem;
            box-shadow: inset 0 0 10px rgba(255, 255, 255, 0.3), 0 4px 20px rgba(13, 148, 136, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 20px;
            position: fixed;
            width: 96%;
            left: 2%;
            top: 10px;
            z-index: 1000;
            display: flex;
            justify-content: space-between;
            align-items: center;
            transition: all 0.4s ease;
        }

        .navbar:hover {
            background: rgba(162, 217, 206, 0.4);
            box-shadow: inset 0 0 15px rgba(255, 255, 255, 0.4), 0 6px 25px rgba(13, 148, 136, 0.1);
            transform: translateY(-2px);
        }

        .navbar-brand img { height: 20px; width: auto; filter: drop-shadow(0 1px 2px rgba(0,0,0,0.1)); }
        .navbar-brand1 img { height: 40px; width: auto; filter: drop-shadow(0 1px 2px rgba(0,0,0,0.1)); }
        .navbar-brand img:hover, .navbar-brand1 img:hover { transform: none; }

        .navbar-nav { display: flex; align-items: center; justify-content: center; flex-grow: 1; }

        .nav-link {
            color: var(--primary-dark) !important;
            font-size: 0.9rem;
            font-weight: 500;
            font-family: var(--sans);
            padding: 0.4rem 0.8rem;
            transition: all 0.25s ease;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            border-radius: 10px;
            background: rgba(255, 255, 255, 0.2);
            border: 1px solid transparent;
            box-shadow: none;
        }

        .nav-link:hover {
            color: var(--light) !important;
            background: var(--primary);
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(13, 148, 136, 0.2);
            border-color: var(--primary-light);
        }

        .nav-item + .nav-item { margin-left: 0.5rem; }

        .dropdown-toggle::after {
            margin-left: 0.4rem;
            border-top-color: currentColor;
            transition: transform 0.3s ease;
        }

        .nav-item.show .dropdown-toggle::after,
        .nav-item.dropdown:hover .dropdown-toggle::after {
            transform: rotate(180deg);
        }

        .dropdown-menu {
            background: #FFFFFF; /* Changé de rgba(255, 255, 255, 0.4) à blanc opaque */
            border: 1px solid var(--border-color-light);
            border-radius: 12px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
            padding: 0.75rem;
            margin-top: 0.6rem !important;
        }

        .dropdown-item-text strong { color: var(--dark); font-weight: 600; }
        .dropdown-item-text small { color: var(--gray); font-size: 0.8rem; display: block; margin-top: 2px; }
        .dropdown-divider { border-top: 1px solid rgba(0, 0, 0, 0.1); margin: 0.5rem 0; }

        .dropdown-item {
            font-size: 0.85rem;
            color: var(--primary-dark);
            font-weight: 500;
            font-family: var(--sans);
            padding: 0.5rem 1rem;
            border-radius: 8px;
            transition: all 0.2s ease;
            background: transparent;
        }

        .dropdown-item:hover {
            background: var(--primary);
            color: var(--light);
            transform: translateX(3px);
            box-shadow: none;
        }

        .navbar-right { margin-right: 1.5rem; }

        .main-content {
            padding: 2rem;
            max-width: 1400px;
            margin: 0 auto;
        }

        .dashboard-header { margin-bottom: 2.5rem; text-align: center; }
        .dashboard-header h1 { 
            font-size: 2rem; 
            font-weight: 700; 
            color: var(--dark); 
            margin-bottom: 0;
            font-family: var(--sans); 
        }
        .welcome-message { color: var(--gray); font-size: 1.1rem; font-family: var(--sans); }

        /* --- Cartes --- */
        .card {
            background: var(--card-bg);
            border-radius: 16px;
            box-shadow: 0 6px 15px rgba(190, 190, 190, 0.15),
                        inset 0 1px 1px rgba(255, 255, 255, 0.3),
                        inset 0 -1px 1px rgba(0, 0, 0, 0.02);
            border: 1px solid var(--border-color-card);
            transition: all 0.35s cubic-bezier(0.25, 0.8, 0.25, 1);
            height: 100%;
            padding: 1.75rem;
            min-height: 240px;
            display: flex;
            flex-direction: column;
            position: relative;
            overflow: hidden;
        }

        .card:hover {
            transform: translateY(-6px);
            box-shadow: 0 12px 28px rgba(13, 148, 136, 0.2),
                        inset 0 1px 1px rgba(255, 255, 255, 0.4),
                        inset 0 -1px 1px rgba(0, 0, 0, 0.03);
            border-color: var(--border-color-card-hover);
        }

        .card-icon-container {
            width: 48px;
            height: 48px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 1rem;
            position: relative;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        .card-icon {
            font-size: 1.2rem;
            color: white;
            position: relative;
            z-index: 1;
            animation: iconPulse 2s infinite ease-in-out;
        }

        @keyframes iconPulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.15); }
        }

        .card-icon-container::before {
            content: '';
            position: absolute;
            width: 150%;
            height: 100%;
            background: linear-gradient(to right, transparent 0%, rgba(255, 255, 255, 0.3) 50%, transparent 100%);
            border-radius: 12px;
            animation: shine 3.5s infinite linear;
            top: 0;
            left: -100%;
            transform: skewX(-25deg);
            z-index: 0;
        }

        @keyframes shine {
            0% { left: -125%; }
            50% { left: 75%; }
            100% { left: 75%; }
        }

        .card-icon-container.events { background: linear-gradient(135deg, var(--primary), var(--primary-light)); }
        .card-icon-container.users { background: linear-gradient(135deg, #F59E0B, #FCD34D); }
        .card-icon-container.stats { background: linear-gradient(135deg, var(--stats-pink), #FFC0CB); }
        .card-icon-container.admin { background: linear-gradient(135deg, var(--accent), #C4B5FD); }

        .card-title { font-size: 1.15rem; font-weight: 600; margin-bottom: 0.75rem; color: var(--dark); font-family: var(--sans); }
        .card-text { color: var(--gray); font-size: 0.9rem; margin-bottom: 1.5rem; flex-grow: 1; font-family: var(--sans); line-height: 1.6; }

        .status-indicator { display: flex; align-items: center; margin-bottom: 1.5rem; font-size: 0.85rem; font-family: var(--sans); font-weight: 500; color: var(--gray); }
        .status-dot { width: 9px; height: 9px; border-radius: 50%; margin-right: 8px; }

        .card-events .status-dot { background-color: var(--primary); }
        .card-users .status-dot { background-color: #F59E0B; }
        .card-stats .status-dot { background-color: var(--stats-pink); }
        .card-admin .status-dot { background-color: var(--accent); }

        .card-link {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            color: var(--primary);
            font-weight: 500;
            font-size: 0.9rem;
            padding: 0.6rem 1.2rem;
            border-radius: 25px;
            background: rgba(13, 148, 136, 0.08);
            border: 1px solid rgba(13, 148, 136, 0.1);
            transition: all 0.25s ease;
            margin-top: auto;
            text-decoration: none;
            font-family: var(--sans);
        }
        .card-link i { transition: transform 0.25s ease; margin-left: 0.3rem; }

        .card-link:hover {
            background: var(--primary);
            color: white;
            border-color: var(--primary);
            box-shadow: 0 4px 12px rgba(13, 148, 136, 0.25);
            transform: scale(1.03);
        }
        .card-link:hover i { transform: translateX(4px); }

        @media (max-width: 767.98px) {
            body { padding-top: 70px; }
            .navbar {
                width: 94%;
                left: 3%;
                top: 10px;
                padding: 0.5rem 1rem;
                border-radius: 12px;
            }
            .main-content { padding: 1.5rem; }
            .card { min-height: auto; padding: 1.5rem; border-radius: 12px;}
            .card:hover { transform: translateY(-4px); }
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg">
        <a class="navbar-brand" href="/dashboard">
            <img src="/assets/evenvo.png" alt="Logo evenvo gauche">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/dashboard">
                        <i class="fas fa-home"></i>
                    </a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-user"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                        <span class="dropdown-item-text">
                            <strong id="userFullName"></strong><br>
                            <small id="userEmail"></small>
                        </span>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="/logout">Déconnexion</a>
                    </div>
                </li>
            </ul>
        </div>
        <div class="navbar-right">
            <a class="navbar-brand1" href="/dashboard">
                <img src="/assets/logo.png" alt="Logo droite">
            </a>
        </div>
    </nav>

    <!-- Contenu principal -->
    <div class="main-content">
        <div class="dashboard-header">
            <h1>Portail Evenvo</h1>
            <p class="welcome-message" id="welcomeMessage">Chargement...</p>
        </div>

        <div class="row g-4">
            <div class="col-sm-6 col-lg-3 d-flex">
                <div class="card card-events">
                    <div class="card-icon-container events">
                        <i class="far fa-calendar-alt card-icon"></i>
                    </div>
                    <div>
                        <h3 class="card-title">Gestion des évènements</h3>
                        <p class="card-text">Planifiez et gérez vos évènements avec notre interface intuitive.</p>
                        <div class="status-indicator">
                            <div class="status-dot"></div>
                            <span>Planification active</span>
                        </div>
                    </div>
                    <a href="/events" class="card-link">
                        Accéder <i class="fas fa-arrow-right small ms-1"></i>
                    </a>
                </div>
            </div>

            <div class="col-sm-6 col-lg-3 d-flex">
                <div class="card card-users">
                    <div class="card-icon-container users">
                        <i class="fas fa-users card-icon"></i>
                    </div>
                    <div>
                        <h3 class="card-title">Utilisateurs</h3>
                        <p class="card-text">Gérez les comptes utilisateurs et les organisations.</p>
                        <div class="status-indicator">
                            <div class="status-dot"></div>
                            <span>Gestion pleinement opérationnelle</span>
                        </div>
                    </div>
                    <a href="/create_user_organisation" class="card-link">
                        Accéder <i class="fas fa-arrow-right small ms-1"></i>
                    </a>
                </div>
            </div>

            <div class="col-sm-6 col-lg-3 d-flex">
                <div class="card card-stats">
                    <div class="card-icon-container stats">
                        <i class="fas fa-chart-line card-icon"></i>
                    </div>
                    <div>
                        <h3 class="card-title">Statistiques</h3>
                        <p class="card-text">Analysez les données de participation à vos évènements.</p>
                        <div class="status-indicator">
                            <div class="status-dot"></div>
                            <span>Stats des utilisateurs</span>
                        </div>
                    </div>
                    <a href="/stats_user" class="card-link">
                        Consulter <i class="fas fa-arrow-right small ms-1"></i>
                    </a>
                </div>
            </div>

            <div class="col-sm-6 col-lg-3 d-flex">
                <div class="card card-admin">
                    <div class="card-icon-container admin">
                        <i class="fas fa-cog card-icon"></i>
                    </div>
                    <div>
                        <h3 class="card-title">Administration</h3>
                        <p class="card-text">Configurez les paramètres avancés de la plateforme.</p>
                        <div class="status-indicator">
                            <div class="status-dot"></div>
                            <span>Réservé aux administrateurs</span>
                        </div>
                    </div>
                    <a href="/administration" class="card-link">
                        Configurer <i class="fas fa-arrow-right small ms-1"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Script JS -->
    <script>
        document.addEventListener('DOMContentLoaded', async () => {
            try {
                const response = await fetch('/get_user_info');
                if (!response.ok) throw new Error(`Erreur HTTP: ${response.status}`);
                const user = await response.json();

                const hours = new Date().getHours();
                let greeting = "Bonjour";
                if (hours >= 12 && hours < 18) greeting = "Bon après-midi";
                else if (hours >= 18 || hours < 5) greeting = "Bonsoir";

                document.getElementById('welcomeMessage').textContent = `${greeting}, ${user.name || 'Utilisateur'}. Bienvenue sur votre espace administrateur.`;

                const fullName = `${user.name || ''} ${user.surname || ''}`.trim();
                document.getElementById('userFullName').textContent = fullName || 'Utilisateur';
                document.getElementById('userEmail').textContent = user.email || 'Email non disponible';

            } catch (error) {
                console.error('Erreur:', error);
                document.getElementById('welcomeMessage').textContent = 'Bienvenue sur votre espace administrateur';
                document.getElementById('userFullName').textContent = 'Utilisateur';
                document.getElementById('userEmail').textContent = 'Email non disponible';
            }
        });
    </script>

    <!-- Scripts Bootstrap -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>